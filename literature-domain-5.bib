@article{Stone2006b,
  author = {Stone, Michael E.},
  title = {What is Housing Affordability? The Case for the Residual Income Approach},
  journal = {Housing Policy Debate},
  year = {2006},
  volume = {17},
  number = {1},
  pages = {151--184},
  doi = {10.1080/10511482.2006.9521564},
  note = {Geography: United States, applicable internationally. Time period: Conceptual with empirical applications. Data source: Census data, household surveys. Main findings: Residual income approach measures affordability by calculating money left after housing and other necessary expenditures (food, clothing, medical, transportation). Uses normative standards of minimum income required for non-housing needs. In sample of 30.9 million renter households, 19.2 million (62.1%) were cost-burdened by residual-income measure while 14.8 million (47.9%) by traditional 30% measure. Residual approach provides better sense of how burdens vary across household types and incomes. The 30%-of-income standard continues valid measure across time and areas. Relevance to hypotheses: H6 (measurement operationalization is normatively charged and affects identification of burdened households).}
}


@article{HerbertHermann2013,
  author = {Herbert, Christopher E. and Hermann, Alexander and McCue, Daniel T.},
  title = {Measuring Housing Affordability: Assessing the 30 Percent of Income Standard},
  institution = {Joint Center for Housing Studies, Harvard University},
  year = {2013},
  note = {Geography: United States, comparative discussion of international measures. Time period: Historical development of 30% standard. Data source: Multiple housing surveys. Main findings: The 30% standard emerged from public housing policy in 1960s-1970s, becoming de facto threshold despite limited empirical justification. Alternative measures include residual income approaches and subjective burden assessments. Different measures identify different populations as cost-burdened. Standard thresholds don't account for household size, composition, or local cost variations. Trade-off between simplicity of ratio measures vs. accuracy of context-specific measures. Relevance to hypotheses: H6 (historical contingency and normative assumptions in burden measurement).}
}


@article{LiXu2022,
  author = {Li, Jie and Xu, Xiaoqing},
  title = {Housing cost burden and life satisfaction},
  journal = {Journal of Housing and the Built Environment},
  year = {2022},
  volume = {37},
  number = {3},
  pages = {1027--1051},
  doi = {10.1007/s10901-021-09921-1},
  note = {Geography: 14 European countries. Time period: 2018. Data source: EU-SILC 2018. Control variables: Age, gender, education, employment, household size, tenure, country fixed effects. Main findings: Both objective housing cost burden (percentage of income spent on housing) and subjective burden (whether households think expenses are burden) affect life satisfaction. Households spending >30% and >50% of income report lower life satisfaction. Negative relationship varies by country, suggesting context-specific welfare systems matter. Objective and subjective measures are related but overlap is imperfect—some with high objective burden don't feel burdened, some with low objective burden do feel burdened. Relevance to hypotheses: H6 (subjective vs. objective burden measurement, imperfect overlap suggests normative complexity).}
}


@misc{FrickKrell2010,
  author = {Frick, Joachim R. and Krell, Kristina},
  title = {Measuring Income in Household Panel Surveys for Germany: A Comparison of EU-SILC and SOEP},
  institution = {DIW Berlin},
  year = {2010},
  type = {SOEPpapers on Multidisciplinary Panel Data Research},
  number = {265},
  note = {Geography: Germany. Time period: 2005-2007. Data source: EU-SILC and SOEP comparative analysis. Main findings: Comparison of two major German household panel surveys shows differences in income measurement, survey methodology, and post-collection treatment. These methodological differences affect measured income distributions, inequality levels, and mobility patterns. Income concepts (gross vs. net, inclusion of housing costs) affect housing burden calculations. Survey design choices have implications for burden measurement. Relevance to hypotheses: H6 (data source and methodology choices affect burden measurement).}
}


@misc{Eurostat2024,
  author = {{Eurostat}},
  title = {EU statistics on income and living conditions (EU-SILC) methodology - housing conditions},
  year = {2024},
  howpublished = {Statistics Explained},
  note = {Geography: EU-27 countries including Germany. Time period: Ongoing panel survey. Data source: EU-SILC methodology documentation. Main findings: EU-SILC uses standardized definitions: housing cost overburden rate measures percentage of population living in households spending more than 40% of equivalised disposable income on housing costs. Equivalisation adjusts for household size/composition using modified OECD scale. Housing costs include rent/mortgage, utilities, maintenance. Standard methodology enables cross-national comparisons but may miss country-specific contexts. Relevance to hypotheses: H6 (standardized measurement choices and their implications).}
}


@article{Haffner2021b,
  author = {Haffner, Marietta and Hulse, Kath},
  title = {A fresh look at contemporary perspectives on urban housing affordability},
  journal = {International Journal of Urban Sciences},
  year = {2021},
  volume = {25},
  number = {sup1},
  pages = {59--79},
  doi = {10.1080/12265934.2019.1687320},
  note = {Geography: International comparative including Germany, UK, Australia. Time period: 2000s-2010s. Data source: Comparative housing systems and measurement approaches. Main findings: Reviews multiple approaches: ratio approach (percentage of income), residual income approach, and subjective measures. Different approaches reflect different normative priorities—ratio approaches prioritize simplicity and cross-context comparability, residual approaches prioritize accuracy to household needs, subjective approaches prioritize lived experience. Housing affordability measures are normatively laden choices reflecting different policy priorities. No measurement approach is value-neutral. Relevance to hypotheses: H6 (measurement operationalization reflects normative choices and policy priorities).}
}


@techreport{OECD2020,
  author = {{OECD}},
  title = {HC1.2 Housing Costs Over Income - Methodology Note},
  institution = {OECD},
  year = {2020},
  type = {Affordable Housing Database Documentation},
  note = {Geography: OECD countries including Germany. Time period: Cross-national comparative. Data source: EU-SILC, national surveys. Main findings: OECD tracks multiple housing cost burden measures: share spending >40% of disposable income (overburden), share by income quintile, share by tenure status. Median housing cost burden shows systematic variation by income quintile (bottom quintile 2-3x higher than top quintile across countries). Measurement standards enable cross-national comparison but obscure within-country heterogeneity. Different countries use different income definitions (gross vs. net, equivalised vs. household). Relevance to hypotheses: H6 (international standardization vs. context sensitivity in measurement).}
}


@article{Whitehead2021,
  author = {Whitehead, Christine M. E. and Williams, Peter},
  title = {Assessing the Evidence on Rent Control from an International Perspective},
  journal = {Report for Residential Landlords Association},
  year = {2021},
  note = {Geography: International comparative including Germany. Time period: Multiple decades reviewed. Data source: Meta-analysis of rent control studies. Main findings: Different studies measure "rent burden" differently, affecting conclusions about rent control effectiveness. Some use gross rent, some net rent after utilities. Some adjust for housing quality, some don't. Threshold choices (30% vs. 40%) affect who counts as burdened. Before-policy vs. after-policy measurement matters for evaluating interventions. Measurement choices can drive different policy conclusions from same underlying data. Relevance to hypotheses: H6 (measurement choices affect policy evaluation, normatively laden).}
}

