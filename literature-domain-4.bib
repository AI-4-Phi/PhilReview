@article{Baye2024,
  author = {Baye, Vera and Dinger, Valeriya},
  title = {Investment incentives of rent controls and gentrification: Evidence from German micro data},
  journal = {Real Estate Economics},
  year = {2024},
  volume = {52},
  number = {3},
  pages = {843--884},
  doi = {10.1111/1540-6229.12478},
  note = {Geography: Germany, focus on cities with Mietpreisbremse. Time period: 2012-2020. Data source: ImmobilienScout24 micro data (117,000 listings). Control variables: Location, dwelling characteristics, time, rent control status. Main findings: German rent control promotes gentrification and amplifies supply shortage of moderately priced living space. Causal negative effect of rent control on yield of rental objects subject to regulation. Rising yields for exempted objects suggests regulation contributed to gentrification via shift of rental housing supply away from regulated segment. Dwellings in municipalities with rent control rented out in worse condition once implemented. Relevance to hypotheses: H1 (urban rent dynamics), H2 (impact on affordable housing supply).}
}


@techreport{Kholodilin2016,
  author = {Kholodilin, Konstantin A. and Mense, Andreas and Michelsen, Claus},
  title = {Market Break or Simply Fake? Empirics on the Causal Effects of Rent Controls in Germany},
  institution = {DIW Berlin},
  year = {2016},
  type = {Discussion Papers},
  number = {1584},
  note = {Geography: Hamburg, Berlin, Munich, Cologne, Düsseldorf. Time period: 2014-2016 (around 2015 Mietpreisbremse introduction). Data source: ImmobilienScout24 listings. Control variables: Dwelling characteristics, location, time trends. Main findings: Difference-in-difference estimation shows rent brake reduced rents on offer in Hamburg, Berlin and Munich by up to 5%, while no effects in Cologne and Düsseldorf. Overall effect of rent control -1.4%, remarkably lower than effects in other literature. Effects lagging behind expected effects almost everywhere, illustrating implementation deficit. Effect vanished about one year after implementation. Relevance to hypotheses: H1 (urban rent trends and policy responses), H2 (limited effectiveness for affordability).}
}


@article{Thomschke2019,
  author = {Thomschke, Lorenz},
  title = {Regional Impact of the German Rent Brake},
  journal = {German Economic Review},
  year = {2019},
  volume = {20},
  number = {4},
  pages = {e885--e916},
  doi = {10.1111/geer.12195},
  note = {Geography: German cities with/without rent control. Time period: 2012-2017. Data source: ImmobilienScout24. Control variables: City characteristics, dwelling attributes, regional economic indicators. Main findings: Neighborhoods with higher price levels show stronger effects of rent control implementation, with maximum decreases up to 8% in high-price neighborhoods vs 4% in low-price neighborhoods. Effects vanish over time in every subgroup. Triple difference event study approach found rent control had significant success initially, dampening rental prices by up to 5% for all dwellings (up to 9% for specific types), but effect disappeared about one year after implementation. Relevance to hypotheses: H1 (spatial variation in rent dynamics), H2 (policy impacts on burden).}
}


@misc{DZHYP2024,
  author = {{Deutsche Zentral-Genossenschaftsbank (DZ HYP)}},
  title = {The German Residential Real Estate Market 2024 | 2025},
  year = {2024},
  note = {Geography: Germany, focus on major cities (Berlin, Munich, Frankfurt, Hamburg). Time period: 2020-2024. Data source: Market transactions, construction permits, rent indices. Main findings: Germany needs 320,000 new dwellings per year between 2023-2030, with Berlin requiring 23,000 annually and Munich 11,300. New housing completions remain well below federal target of 400,000 units per year. Building permits issued fell by 27%. Production costs for residential buildings increased around 40% since 2020. In large cities total cost of new builds increased to more than EUR 5,000 per sqm. Munich has lowest vacancy rate at 0.2%. Relevance to hypotheses: H1 (supply constraints and urban costs), H2 (new construction barriers affect affordability).}
}


@article{Dustmann2019,
  author = {Dustmann, Christian and Fitzenberger, Bernd and Zimmermann, Markus},
  title = {Housing Expenditure and Income Inequality},
  journal = {The Economic Journal},
  year = {2022},
  volume = {132},
  number = {645},
  pages = {1709--1736},
  doi = {10.1093/ej/ueab097},
  note = {Geography: Germany including urban-rural breakdown. Time period: 1993-2013. Data source: SOEP, EVS. Control variables: Location (city size), age, household structure. Main findings: Declining relative costs of homeownership versus renting, changes in household structure, declining real incomes for low-income households and residential mobility towards larger cities all contribute to rising housing inequality. Younger cohorts spend more on housing and save less than older cohorts did at same age. Migration to larger cities puts pressure on urban housing markets. Relevance to hypotheses: H1 (urban migration and housing costs), H2 (low-income urban burden), H4 (income changes explain burden).}
}


@article{Berger2023,
  author = {Berger, Sebastian and Aubry, Mathieu},
  title = {Assessing displacement in a tight housing market: findings from Berlin},
  journal = {Urban Geography},
  year = {2024},
  volume = {45},
  number = {3},
  pages = {487--510},
  doi = {10.1080/13604813.2023.2180829},
  note = {Geography: Berlin, Germany. Time period: 2019 survey data. Data source: Household survey (N=1,200+). Control variables: Tenure, income, household type, neighborhood. Main findings: More than 15% of Berlin respondents experienced direct displacement, with rent increases after refurbishment or property sales proving most common triggers. Berlin gains 40,000 inhabitants per year but only constructing 15,000 new dwellings annually. Displacement concentrated among renters and lower-income households. Relevance to hypotheses: H1 (urban housing pressures), H2 (low-income vulnerability to displacement).}
}


@article{Stawarz2021b,
  author = {Stawarz, Nico and Sander, Nikola and Sulak, Harun and Rosenbaum-Feldbrügge, Matthias},
  title = {Internal migration and housing costs---A panel analysis for Germany},
  journal = {Population, Space and Place},
  year = {2021},
  volume = {27},
  number = {6},
  pages = {e2412},
  doi = {10.1002/psp.2412},
  note = {Geography: 401 German counties. Time period: 2004-2017. Data source: Federal Statistical Office migration data, ImmobilienScout24 rent data. Control variables: Employment, wages, amenities, demographics. Main findings: Regions with rising housing costs experience declining inflows. In larger cities, rising housing costs also associated with increasing outflows. Residential asking rents per m² increased by 4% per year between 2011-2017 (around 26% cumulative). Rising housing costs act as barrier to migration into high-opportunity urban areas. Rent-to-income ratios increase with municipality size. Relevance to hypotheses: H1 (urban rent increases and migration), H2 (spatial concentration of burden).}
}


@misc{GlobalProperty2025,
  author = {{Global Property Guide}},
  title = {Germany's Residential Property Market Analysis 2025},
  year = {2025},
  note = {Geography: Germany, major cities. Time period: 2000-2025. Data source: Market indices, transaction data. Main findings: Berlin achieved highest cumulative value increase since 2000 at about 160% adjusted for inflation, followed by Munich and Frankfurt. Urban centers like Berlin and Munich struggle with soaring rents and housing shortages while rural areas have empty properties. Berlin and other urban centers have just 2% vacancy rates reflecting intense demand and rising rents, whereas eastern Germany has vacancy rate of 7.6%. Relevance to hypotheses: H1 (long-term urban price trends), spatial divide in housing markets.}
}


@techreport{Bundesbank2023,
  author = {{Deutsche Bundesbank}},
  title = {A house prices at risk approach for Germany},
  institution = {Deutsche Bundesbank},
  year = {2023},
  type = {Technical Paper},
  note = {Geography: Germany, national and regional. Time period: 2010-2023. Data source: Housing price indices, macroeconomic data, mortgage data. Control variables: Interest rates, employment, income, housing-market-specific risk premia. Main findings: Framework estimates forecast distribution for German residential real estate prices using quantile regression. Interest rates, housing-market-specific risk premia, and employment predominantly affect lower quantiles of forecast distribution. Middle of forecast distribution affected by past house price growth rates, while interest rate changes move left tail to greater degree. Owner-occupied housing prices fell 5.8% year-over-year in Q3 2023 according to one index, 9.9% according to another. Relevance to hypotheses: H1 (price dynamics and determinants), macroeconomic factors affecting housing costs.}
}


@misc{Cushman2025,
  author = {{Cushman \& Wakefield}},
  title = {Top Housing Markets Stabilise -- Rent Prices Rise More Slowly},
  year = {2025},
  howpublished = {MarketBeat Wohnmarkt Germany},
  note = {Geography: Germany, 7 major cities (Berlin, Munich, Hamburg, Cologne, Frankfurt, Düsseldorf, Stuttgart). Time period: 2023-2024. Data source: Market transactions, rent indices. Main findings: Deutsche Bundesbank's apartment rent index showed 3.7% growth in 2024 compared to 5.0% in 2023, while 7 major cities saw slowdown from 6.0% in 2023 to 3.5% in 2024. Frankfurt, Hamburg, and Düsseldorf showed increasing growth rates at end of 2024, while percentage increase in Berlin and Munich decreased significantly year-over-year. Relevance to hypotheses: H1 (current urban rent dynamics), recent moderation but continued increases.}
}


@article{Voigtlaender2009,
  author = {Voigtländer, Michael},
  title = {Why is the German Homeownership Rate so Low?},
  journal = {Housing Studies},
  year = {2009},
  volume = {24},
  number = {3},
  pages = {355--372},
  doi = {10.1080/02673030902875011},
  note = {Geography: Germany compared to other European countries and US. Time period: 1980s-2000s. Data source: Housing statistics, tenure data. Main findings: Unlike most other European countries and US, real house prices declined since 1980s in Germany. Four factors explain low homeownership: extensive social housing sector, high transfer taxes, no mortgage interest deductibility, and conservative lending policies. Rental housing stock generally well-maintained and apartments in rental and owner-occupied markets of similar quality. Large non-stigmatized rental sector reduces pressure for homeownership. Relevance to hypotheses: H2 (rental market structure affects burden distribution), institutional context for high rental share.}
}


@article{Stephens2020,
  author = {Stephens, Mark and Lux, Martin and Sunega, Petr},
  title = {Post-socialist housing systems in Europe: Housing welfare regimes by default?},
  journal = {Housing Studies},
  year = {2015},
  volume = {30},
  number = {8},
  pages = {1210--1234},
  doi = {10.1080/02673037.2015.1013090},
  note = {Geography: Germany and other European housing systems. Time period: 2000s-2010s. Data source: Comparative housing systems analysis. Main findings: Germany (with Austria and Switzerland) has "regulated rental regime" with low homeownership rates due to large, non-stigmatized and broadly accessible rental sectors. German and Swedish households are worst off when it comes to housing costs, with median households paying more than 16% of disposable income on living costs. Substantial shares of cash renters in Netherlands, Germany, and Sweden received housing allowances. Relevance to hypotheses: Comparative context for German housing system, H2 (rental burden and housing allowances).}
}

