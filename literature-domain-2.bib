@techreport{IMF2015,
  author = {{IMF}},
  title = {The German Labor Market Reforms and Post-Unemployment Earnings},
  institution = {International Monetary Fund},
  year = {2015},
  type = {IMF Working Paper},
  number = {WP/15/162},
  note = {Geography: Germany. Time period: 1993-2010, focus on 2003-2005 Hartz reforms. Data source: IAB employment sample. Control variables: Age, education, industry, region, previous earnings. Main findings: The growth in earnings inequality and steady decline in real wages since early 2000s is well established for Germany. Hartz IV reform reduced real wages by around 4 percent. The period of Hartz reforms coincided with prolonged phase of negative growth in average wages. The decrease in real wages after 2001 is clearly visible, with decline strongest in 25th and 50th percentiles of wage distribution. Relevance to hypotheses: H3 (wage trends affect housing burden), H4 (wage income explains housing burden changes).}
}


@article{Addison2014,
  author = {Addison, John T. and Teixeira, Paulino and Evers, Katalin and Bellmann, Lutz},
  title = {Indicative and Updated Estimates of the Collective Bargaining Premium in Germany},
  journal = {Industrial Relations: A Journal of Economy and Society},
  year = {2014},
  volume = {53},
  number = {1},
  pages = {125--156},
  doi = {10.1111/irel.12049},
  note = {Geography: Western and Eastern Germany. Time period: 1996-2009. Data source: IAB Establishment Panel (16,000 establishments). Control variables: Establishment size, industry, region, workforce composition. Main findings: Between 1996 and 2009, sectoral collective bargaining coverage for employees decreased by 14 percentage points in western Germany and 18 percentage points in eastern Germany. About 56% and 38% of employees in western and eastern Germany respectively worked in establishment covered by sectoral collective agreement in 2009. Average wages increase by 3-3.5% after entering collective agreement and decrease by 3-4% after abandoning one. Relevance to hypotheses: H3 (wage determination mechanisms), H4 (wage effects on income).}
}


@misc{Bundesbank2024,
  author = {{Deutsche Bundesbank}},
  title = {Wage developments in Germany: current situation, comparison with the euro area, and outlook},
  year = {2024},
  howpublished = {Monthly Report October 2024},
  note = {Geography: Germany vs. Euro area. Time period: 2009-2024. Data source: Federal Statistical Office, Bundesbank calculations. Control variables: Sector, inflation, productivity. Main findings: From 2009 to 2018, collective earnings in public sector rose by around 24% in nominal terms, with average across entire economy at 25%. Public sector had high wage increases in 2022 (federal and local government) and 2023 (states) and outstripped that of metal industry. Real wage losses from inflation have now been largely recouped, with wages rising very sharply during inflation period and continuing strong growth in 2024. Relevance to hypotheses: H3 (public sector wage trends), H4 (wage changes over time).}
}


@article{Boeckler2024,
  author = {{Hans-Böckler-Stiftung}},
  title = {Collective Bargaining in Germany 2024},
  journal = {WSI Tarifarchiv},
  year = {2024},
  note = {Geography: Germany. Time period: 2024. Data source: WSI Collective Agreement Archive. Main findings: Public sector with total of 3.6 million employees did not conduct collective bargaining in 2024 due to long-standing collective agreements from previous year. More than 2.5 million employees directly or indirectly affected by collective agreement for public sector (TVöD). Germany's public sector employs approximately 4.9 million employees and civil servants. Wage posting dominates in public sector and in firms with collective agreements. Relevance to hypotheses: H3 (public sector wage determination), H5 (dualization in labor market and wages).}
}


@article{Schmidt2024,
  author = {Schmidt, Werner and Müller, Andrea},
  title = {Differing industrial relations: The public and the private sector in Germany},
  journal = {Industrial Relations Journal},
  year = {2024},
  volume = {55},
  number = {3},
  pages = {243--261},
  doi = {10.1111/irj.12429},
  note = {Geography: Germany. Time period: 2000-2020. Data source: IAB data, public sector employment statistics. Control variables: Sector, establishment size, region. Main findings: German system of wage negotiation has been losing importance for years in private sector, while there are no signs of erosion of collective bargaining in public sector. Level of collective bargaining is rather centralized and comprehensive in public sector. Dual employment system: civil servants (no collective bargaining/strike rights) and public sector employees (strong union bargaining power). Since Q4 2019, private sector employment declined while public sector employment rose. Relevance to hypotheses: H3 (public vs. private sector wage determination), H5 (labor market dualization).}
}


@misc{IFO2020,
  author = {{ifo Institute}},
  title = {Collective Bargaining in the Public Sector},
  year = {2020},
  howpublished = {ifo Viewpoint No. 219},
  note = {Geography: Germany. Time period: 2000-2020. Data source: Public employment statistics, wage data. Main findings: Study predicts that by 2030 there will be need for around 1 million employees in entire public sector. In competition with private companies, public sector is often not attractive enough for recruiting workers due to poor pay and working conditions. Established rules (collective agreements and salary laws) do not allow wages/salaries for single employees or civil servants to be increased, even if single employer would like to pay more. Scarcity of skilled workers may cause tensions between public and private sectors. Relevance to hypotheses: H3 (public sector wage constraints and competition with private sector).}
}


@article{Keller2020,
  author = {Keller, Berndt and Kirsch, Alexandra},
  title = {Employment relations without collective bargaining and strikes: the unusual case of civil servants in Germany},
  journal = {Industrial Relations Journal},
  year = {2020},
  volume = {51},
  number = {3},
  pages = {232--251},
  doi = {10.1111/irj.12284},
  note = {Geography: Germany. Time period: 1990-2020. Data source: Public employment statistics, legal analysis. Control variables: Civil servant status, federal vs. state level. Main findings: Civil servants have diverging forms of employment relations without right to collective bargaining and strike. System regulated by two different approaches: civil servants and non-civil servant public sector employees. Civil servants' pay determined by government without negotiation. This creates unique wage determination system in German public sector. Relevance to hypotheses: H3 (public sector wage determination mechanisms), H5 (institutional dualization).}
}


@article{Biewen2018,
  author = {Biewen, Martin and Seckler, Matthias},
  title = {Unions, internationalization, tasks, firms, and worker characteristics: A detailed decomposition analysis of rising wage inequality in Germany},
  journal = {The Journal of Economic Inequality},
  year = {2018},
  volume = {16},
  number = {4},
  pages = {461--498},
  doi = {10.1007/s10888-018-9397-4},
  note = {Geography: Germany. Time period: 1999-2010. Data source: SOEP. Control variables: Education, age, gender, industry, occupation, firm size, union coverage, task content. Main findings: Decomposition of rising wage inequality shows substantial contribution from declining union coverage. De-unionization accounts for significant portion of rising wage dispersion. Worker and firm characteristics explain substantial variance. Wage inequality increased particularly at bottom of distribution. Relevance to hypotheses: H3 (union decline affects wages), H4 (wage inequality connects to housing burden inequality).}
}


@article{Dustmann2014,
  author = {Dustmann, Christian and Fitzenberger, Bernd and Schönberg, Uta and Spitz-Oener, Alexandra},
  title = {From Sick Man of Europe to Economic Superstar: Germany's Resurgent Economy},
  journal = {Journal of Economic Perspectives},
  year = {2014},
  volume = {28},
  number = {1},
  pages = {167--188},
  doi = {10.1257/jep.28.1.167},
  note = {Geography: Germany. Time period: 1995-2010. Data source: SOEP, IAB data, Federal Statistical Office. Control variables: Education, experience, industry, occupation. Main findings: After 1999, wage gains no longer kept pace with productivity. As wages stagnated, inequality worsened and poverty rates rose, with total labor compensation falling from 61% of GDP in 2001 to 55% in 2007. In late 1990s, labor unions explicitly declared willingness to accept real wage stagnation in exchange for job creation. More than 5 million German workers are in precarious jobs. Relevance to hypotheses: H3 (wage stagnation period), H4 (income decline affects housing affordability).}
}


@article{Bosch2017,
  author = {Bosch, Gerhard},
  title = {The German labor market is set to remain tight},
  journal = {Rabobank Economic Research},
  year = {2017},
  note = {Geography: Germany. Time period: 2000-2017. Data source: Federal Employment Agency, OECD data. Main findings: More unemployed took up less-paid work, which resulted in smaller wage pressure during collective negotiations, leading to average reduction of 2% of unit labor costs in Germany between 2000 and 2007, compared with average increase of 22% amongst all other OECD countries in same period. Mounting variation in sectoral wage patterns, with unit labor costs growing much faster in manufacturing and financial sectors and much slower in construction, public sector, and low-end services. Relevance to hypotheses: H3 (sectoral wage variation including public sector), H4 (wage moderation affects income).}
}


@article{Eichhorst2015,
  author = {Eichhorst, Werner and Marx, Paul},
  title = {Not so standard anymore? Employment duality in Germany},
  journal = {Journal for Labour Market Research},
  year = {2015},
  volume = {48},
  number = {2},
  pages = {81--95},
  doi = {10.1007/s12651-015-0176-7},
  note = {Geography: Germany. Time period: 1990-2013. Data source: SOEP, IAB data. Control variables: Age, education, gender, industry, occupation, contract type. Main findings: Labor market duality partially attributed to reforms promoting non-standard employment and expanding low pay, alongside structural economic changes. Share of non-standard workers has grown. Dualization supports disinflation by creating low-wage sector and fostering intra-firm competition between standard and non-standard workers as disciplinary device encouraging wage moderation. Question raised whether dualization still valid characterization of Germany's trajectory after early 2010s. Relevance to hypotheses: H3 (wage effects of labor market dualization), H5 (dualized labor markets).}
}


@article{Hassel2014,
  author = {Hassel, Anke},
  title = {The Paradox of Liberalization---Understanding Dualism and the Recovery of the German Political Economy},
  journal = {British Journal of Industrial Relations},
  year = {2014},
  volume = {52},
  number = {1},
  pages = {57--81},
  doi = {10.1111/j.1467-8543.2012.00913.x},
  note = {Geography: Germany. Time period: 1990-2012. Data source: OECD, IAB, wage statistics. Control variables: Sector, employment type, union coverage. Main findings: Liberalization led to considerable wage restraint in low-end services over past 2-3 decades to extent exceptional in western Europe, making Germany increasingly resemble liberal market economy in service sector where weak workers' wages depend on price mechanism. Labor market duality became more pronounced with core workers protected while peripheral workers face wage compression. Relevance to hypotheses: H3 (wage restraint in specific sectors), H5 (dualization of labor market and wages).}
}

