@article{glaeser2018economic,
  author    = {Glaeser, Edward L. and Gyourko, Joseph},
  title     = {The Economic Implications of Housing Supply},
  journal   = {Journal of Economic Perspectives},
  volume    = {32},
  number    = {1},
  pages     = {3--30},
  year      = {2018},
  doi       = {10.1257/jep.32.1.3},
  note      = {Economic analysis with normative implications. Restrictive zoning and limits on development create artificial scarcity of living space making it difficult for poorer people to find housing and hampering progress of cities. Research shows land-use restrictions limit density, curbing supply of housing and driving up prices. Proposes comprehensive overhaul of federal housing policy that takes into account local regulations and economic conditions and emphasizes need for local governments to reduce supply restrictions and let housing markets operate freely. Glaeser describes philosophy as both libertarian and progressive: about free people and free markets and fundamentally giving property owners right to do what they want with their own property, while also good for poor people because if you allow more housing to be built, prices of housing are going to go down for ordinary people.}
}

@article{whittemore2017experience,
  author    = {Whittemore, Andrew H.},
  title     = {The Experience of Racial and Ethnic Minorities with Zoning in the United States},
  journal   = {Journal of Planning Literature},
  volume    = {32},
  number    = {1},
  pages     = {16--27},
  year      = {2017},
  doi       = {10.1177/0885412216683671},
  note      = {Examines how exclusionary zoning was introduced in early 1900s, typically to prevent racial and ethnic minorities from moving into middle- and upper-class neighborhoods. After Supreme Court's Buchanan v. Warley decision in 1917 ruled city zoning ordinances could not legally forbid minorities from occupying blocks where majority of residents were white, communities shifted to economic-based exclusionary tactics. Because racial minorities are much more likely to have lower incomes, class-based discrimination tends to have disparate impact on them, paralleling racial discrimination of past—making today's exclusionary zoning, in its outcome, de facto racial discrimination. Fair Housing Act does not prohibit class-based discrimination.}
}

