@book{kohn2016death,
  author    = {Kohn, Margaret},
  title     = {The Death and Life of the Urban Commonwealth},
  publisher = {Oxford University Press},
  year      = {2016},
  isbn      = {9780190606596},
  doi       = {10.1093/acprof:oso/9780190606596.001.0001},
  note      = {Proposes productive way to rethink struggles over gentrification, public housing, transit, and public space through novel combination of political and urban theory. Draws on mostly forgotten political theory called solidarism to interpret city as form of common-wealth. Views city as concentration of value created by past generations and current residents: streets, squares, community centers, schools and local churches. Solidarism is strand of left-republicanism that emerged in France in late 19th and early 20th centuries. Argues when people lose access to urban commons, they are dispossessed of something to which they have rightful claim—right to city. Explains why displacement through gentrification, slum clearance, and destruction of public housing are wrong and why public space must be both stage for political disagreement and shared thing (res publica) that brings us together. Won Judd Award for Best Book in Local and Urban Politics and Easton Award for Best Book from Foundations of Political theory section of APSA in 2017. Margaret Kohn is Professor of Political Science at University of Toronto.}
}

