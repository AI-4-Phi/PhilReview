@article{Schwander2019,
  author = {Schwander, Hanna},
  title = {Labor Market Dualization and Insider–Outsider Divides: Why This New Conflict Matters},
  journal = {Political Studies Review},
  year = {2019},
  volume = {17},
  number = {1},
  pages = {14--29},
  doi = {10.1177/1478929918790872},
  note = {Geography: Continental Europe including Germany. Time period: 1990-2015. Data source: Labor force surveys, political economy analysis. Control variables: Employment status, sector, education, age. Main findings: Labor market dualization focuses on increasing disparities between securely employed market-insiders and expanding proportions of market-outsiders with more precarious employment positions. Approach extends insights from segmented labor market theory and insider/outsider theory, which explains economic inequality and unemployment based on assumption that insiders are in powerful bargaining position because replacement of workers implies transaction costs for employers. Relevance to hypotheses: H5 (theoretical foundations of dualization), H3 (insider-outsider wage effects).}
}


@article{Biegert2017,
  author = {Biegert, Thomas},
  title = {Labor market institutions, the insider/outsider divide and social inequalities in employment in affluent countries},
  journal = {Socio-Economic Review},
  year = {2019},
  volume = {17},
  number = {2},
  pages = {255--281},
  doi = {10.1093/ser/mwx042},
  note = {Geography: 18 affluent countries including Germany. Time period: 2000-2011. Data source: EU-SILC, labor force surveys. Control variables: Age, gender, education, household type, country, time. Main findings: Institutions that arguably protect labor market insiders (employment protection, unionization, unemployment benefits) are frequently associated with greater inequality between typically disadvantaged groups and their insider peers. Insider-outsider divides appear to be strongest in continental Europe with regard to labor market inequalities, welfare inequalities and political integration. Continental welfare regimes reinforce labor market dualism by means of taxes and transfers: net wage gaps lie between 5-8 percentage points above gross wage gaps. Relevance to hypotheses: H5 (institutional mechanisms of dualization), comparative evidence for Germany.}
}


@article{Rueda2005,
  author = {Rueda, David},
  title = {Insider–Outsider Politics in Industrialized Democracies: The Challenge to Social Democratic Parties},
  journal = {American Political Science Review},
  year = {2005},
  volume = {99},
  number = {1},
  pages = {61--74},
  doi = {10.1017/S000305540505149X},
  note = {Geography: OECD countries including Germany. Time period: 1970-2000. Data source: Comparative labor market data. Control variables: Union membership, employment status, industry. Main findings: Political conflict increasingly structured by insider-outsider divide. Insiders benefit from employment protection and have incentive to support policies that disadvantage outsiders. Social democratic parties face trade-off between representing core insider constituency and broader working class including outsiders. Political economy of insider-outsider division affects welfare state and labor market policy. Relevance to hypotheses: H5 (political economy of dualization), H3 (political determinants of wage policy).}
}


