@article{Emmenegger2009,
  author = {Emmenegger, Patrick},
  title = {Barriers to Entry: Insider/Outsider Politics and the Political Determinants of Job Security Regulations},
  journal = {Journal of European Social Policy},
  year = {2009},
  volume = {19},
  number = {2},
  pages = {131--146},
  doi = {10.1177/0958928708101866},
  note = {Geography: Western Europe including Germany. Time period: 1985-2003. Data source: OECD employment protection indicators, political data. Control variables: Government partisanship, union strength, unemployment rate. Main findings: Insider-outsider politics shapes employment protection legislation. Strong unions and left governments protect insiders while being less responsive to outsiders. Employment protection reforms often increase dualization rather than reducing it. Political economy analysis shows how policies institutionalize insider-outsider divide. Relevance to hypotheses: H5 (political determinants of dualization), H3 (policy effects on employment and wages).}
