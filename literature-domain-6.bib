@misc{Brookings2021,
  author = {Kusisto, Laura},
  title = {Strong tenant protections and subsidies support Germany's majority-renter housing market},
  year = {2021},
  howpublished = {Brookings Institution},
  note = {Geography: Germany, international comparison. Time period: 2010s-2020. Data source: Housing policy analysis, OECD data. Main findings: 54% of German households rent (2018), much higher than 36% US average. Strong tenant protections include long-term security of tenure, limits on rent increases (capped at 15-20% over 3 years), restrictions on evictions. These protections make renting stable, reducing pressure for homeownership. However, protections may constrain supply by reducing investor returns. Housing allowance (Wohngeld) supports ~550,000 low-income households. Balanced approach combines market mechanisms with social protections. Relevance to hypotheses: H2 (tenant protection effects), H6 (institutional design choices).}
}


@article{Holm2020,
  author = {Holm, Andrej and Soba, Dana and Baldenius, Till},
  title = {How Much State and How Much Market? Comparing Social Housing in Berlin and Vienna},
  journal = {German Politics},
  year = {2021},
  volume = {30},
  number = {4},
  pages = {544--561},
  doi = {10.1080/09644008.2020.1771696},
  note = {Geography: Berlin vs. Vienna (comparative case study). Time period: 1990-2020. Data source: Housing policy analysis, municipal data. Main findings: Berlin social housing stock declined sharply due to privatization and subsidy expiration, falling from 360,000 units (1990) to ~100,000 (2020). Vienna maintained large municipal housing sector (>25% of stock). Berlin's privatization to equity funds transformed rental market, with properties cycling between financial investors. Vienna's maintained social housing provides price anchor for broader market. Different institutional paths produced starkly different affordability outcomes. Relevance to hypotheses: H2 (social housing policy effects), institutional variation within Germany.}
}


@misc{IMF2021,
  author = {{IMF}},
  title = {Affordable Rental Housing: Making It Part of Europe's Recovery},
  institution = {International Monetary Fund},
  year = {2021},
  type = {Departmental Papers},
  number = {2021/013},
  note = {Geography: Europe including Germany. Time period: 2015-2020. Data source: EU-SILC, national housing data. Main findings: Tenants in bottom income quintile who rent at market prices spend more than 40% of disposable income on rents in most European countries. Housing benefit programs in Germany, Netherlands, and Nordic countries partially offset burdens but limited reach. Rental housing investment declined in many countries. Need for supply-side policies (construction, land use) alongside demand-side support. Germany's regulated rental market provides stability but may constrain supply. Relevance to hypotheses: H2 (low-income rental burden), European comparative context for German policies.}
}


@article{Brezina2011,
  author = {Brezina, Ivo and Saischek, Ulrich},
  title = {The Declining Social Rental Sector in Germany},
  journal = {Urban Research \& Practice},
  year = {2011},
  volume = {4},
  number = {2},
  pages = {131--148},
  doi = {10.1080/17535069.2011.580000},
  note = {Geography: Germany, focus on Berlin and other major cities. Time period: 1960-2010. Data source: Social housing statistics, policy analysis. Main findings: Social rental housing proportion fell very strongly in former West Germany since mid-1960s. Number of social housing units decreased from 2.6 million (2002) to 1.4 million (2014), annual loss of >41,000 units due to expiring price controls. Market share now approximately one-sixth of 1960s West Germany level. Subsidy periods reduced from up to 50 years to 10-15 years recently. Elimination of tax benefits for non-profit corporations (1988) propelled decline. Large-scale privatization to institutional investors transformed rental markets. Relevance to hypotheses: H2 (decline of affordable housing stock), H6 (policy design and implementation affecting outcomes).}
}


@misc{OECD2021,
  author = {{OECD}},
  title = {Housing Policy in Germany},
  institution = {OECD},
  year = {2021},
  type = {OECD Housing Policy Reviews},
  note = {Geography: Germany. Time period: 2000-2020 with historical context. Data source: OECD housing policy database, German government data. Main findings: Germany has low homeownership rate (46%) due to high transaction costs (5-6% of property value), no mortgage interest deductibility, and extensive rental sector. Rent regulation (Mietpreisbremse) introduced 2015 has limited effectiveness. Housing benefit (Wohngeld) supports low-income renters but reaches only fraction of burdened households. Social housing stock declined dramatically. Recent policies focus on increasing construction but face supply constraints. Germany's decentralized federal structure creates policy variation across Länder. Relevance to hypotheses: Comprehensive policy context for H2, H6 (institutional framework and policy effectiveness).}
}


@article{Thomschke2017,
  author = {Thomschke, Lorenz},
  title = {Über die Evaluierung der Mietpreisbremse [On the evaluation of the German rental price break]},
  journal = {Zeitschrift für Immobilienökonomie},
  year = {2019},
  volume = {5},
  number = {1},
  pages = {63--87},
  doi = {10.1365/s41056-019-00032-1},
  note = {Geography: German cities with Mietpreisbremse. Time period: 2015-2018. Data source: Empirical evaluation studies, rent data. Main findings: Evaluation of Mietpreisbremse shows effects lagging behind expectations, illustrating implementation deficit. No general statements on effectiveness currently permissible due to limited time elapsed. Neighborhoods with higher price levels show stronger effects on implementation, but effects tend to vanish over time. Implementation challenges include exemptions for new construction, renovations, and previous tenant rent serving as baseline. Relevance to hypotheses: H2 (policy effectiveness evaluation), H6 (challenges in measuring policy impacts).}
}


@misc{Destatis2022,
  author = {{German Federal Statistical Office (Destatis)}},
  title = {Housing costs: 10.7 percent of the population regarded as overburdened in 2021},
  year = {2022},
  howpublished = {Press Release No. N054},
  note = {Geography: Germany. Time period: 2021. Data source: EU-SILC. Main findings: In 2021, 10.7% of German population lived in households overburdened by housing costs (spending >40% of disposable income on housing). Rate higher for low-income households. Germany below EU average of 8.2% in 2024 data, suggesting improvement or measurement differences. Overburden rates vary by household type: single-person households and single parents particularly affected. Renters more affected than owners. Relevance to hypotheses: H2 (official statistics on burden prevalence and distribution).}
}

