@techreport{Kholodilin2016b,
  author = {Kholodilin, Konstantin A. and Mense, Andreas and Michelsen, Claus},
  title = {Market Break or Simply Fake? Empirics on the Causal Effects of Rent Controls in Germany},
  institution = {DIW Berlin},
  year = {2016},
  type = {Discussion Papers},
  number = {1584},
  note = {Geography: Hamburg, Berlin, Munich, Cologne, Düsseldorf. Time period: 2014-2016 (Mietpreisbremse introduction). Data source: ImmobilienScout24 (117,000 listings). Control variables: Dwelling characteristics, location, time trends. Main findings: Difference-in-difference estimation shows rent brake reduced rents by up to 5% in some cities initially, but effect vanished after one year. Overall effect -1.4%. Implementation deficit evident. Rent control mostly benefits high-income neighborhoods, missing policy goal of helping low-income renters. Despite poor persistent effectiveness, quality of offered dwellings suffered. Relevance to hypotheses: H1, H2 (policy effectiveness for urban affordability), H6 (policy evaluation requires appropriate measurement).}
}


@misc{Jagemann2022b,
  author = {Jagemann, Lars},
  title = {Affordable Housing in Germany -- The case of Housing Allowance (Wohngeld)},
  institution = {ERES (European Real Estate Society)},
  year = {2022},
  type = {Working Paper},
  number = {2022\_157},
  note = {Geography: Germany, focus on dense regions. Time period: 2000s-2020s. Data source: Rent data, administrative housing allowance data. Control variables: Region, income, household size, rent levels. Main findings: Housing allowance effective in significantly reducing rent burden for transfer recipients, particularly in dense regions. Housing Benefit Plus Act (2023) doubled benefits from €190 to €370/month on average and doubled recipients. Program reaches about 550,000-1,100,000 households. Wohngeld legislation in place since 1965 (West Germany) and 1991 (East Germany). Income threshold raised in 2025 to expand eligibility. Relevance to hypotheses: H2 (policy intervention for low-income burden), H6 (effectiveness measurement).}
}


@misc{Habitat2021,
  author = {{Habitat for Humanity}},
  title = {Housing policy - the German 'social market economy' model},
  year = {2021},
  note = {Geography: Germany. Time period: Historical overview 1950s-2020s. Data source: Policy analysis, housing statistics. Main findings: German housing model combines market mechanisms with strong tenant protections. Social housing stock declined dramatically from 4 million (1980s West Germany) to ~1 million today. Tax incentives for social housing abolished late 1980s. Large stocks of municipal housing sold to private sector 1990s-2000s. Rent regulation (Mietpreisbremse) introduced 2015, extended to 2029. Strong tenant protections limit rent increases and evictions. High transaction costs and no mortgage interest deductibility suppress homeownership. Relevance to hypotheses: H2, H6 (institutional context for housing policy and burden distribution).}
}


@article{Stephens2015,
  author = {Stephens, Mark and Lux, Martin and Sunega, Petr},
  title = {Post-socialist housing systems in Europe: Housing welfare regimes by default?},
  journal = {Housing Studies},
  year = {2015},
  volume = {30},
  number = {8},
  pages = {1210--1234},
  doi = {10.1080/02673037.2015.1013090},
  note = {Geography: Germany and other European housing systems (comparative). Time period: 1990-2010. Data source: Comparative housing policy analysis. Main findings: Germany classified as "regulated rental regime" along with Austria and Switzerland, characterized by large non-stigmatized rental sectors and strong tenant protections. Netherlands, Austria, Denmark have largest social housing shares (>20% of stock). Germany has moderate-low social housing share but extensive rental market. Housing allowances vary widely: Netherlands, Germany, Sweden have substantial programs supporting cash renters. Comparative analysis shows institutional complementarities between housing, welfare, and labor market policies. Relevance to hypotheses: Comparative context for German housing policy, H5 (institutional complementarities).}
