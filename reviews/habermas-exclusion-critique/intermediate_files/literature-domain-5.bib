@article{owen2007whiteness,
  author = {Owen, David S.},
  title = {Towards a Critical Theory of Whiteness},
  journal = {Philosophy \& Social Criticism},
  year = {2007},
  volume = {33},
  number = {2},
  pages = {203--222},
  doi = {10.1177/0191453707074139},
  note = {
  CORE ARGUMENT: Owen argues that a critical theory of whiteness is necessary but not sufficient for an adequate account of racial oppression. Drawing on Habermas and Mills, he develops an account of whiteness as a social structure -- not merely individual prejudice -- that operates through specific mechanisms of social reproduction. He argues that Habermas's theory of communicative action provides resources for understanding how whiteness operates systemically but requires supplementation with Mills's racial contract to explain the structural character of white privilege.

  RELEVANCE: This paper is one of the few systematic attempts to put Habermas's critical theory into dialogue with Mills's racial contract theory, and it directly addresses what a critical theory of whiteness informed by Habermasian resources would look like. It is particularly relevant to the question of whether Habermasian frameworks can be reconstructed for race-conscious purposes.

  POSITION: Reconstructive position seeking to synthesize Habermasian critical theory with the racial contract tradition; mediates between internal and external critiques.
  },
  keywords = {whiteness, Habermas, Mills, racial-contract, critical-theory, social-structure, Medium}
}

@article{bhambra2021decolonizing2,
