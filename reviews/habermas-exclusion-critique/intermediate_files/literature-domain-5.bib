@article{mendonca2025decolonizing,
  author = {Mendon\c{c}a, Ricardo Fabrino and Asenbaum, Hans},
  title = {Decolonizing Deliberative Democracy},
  journal = {European Journal of Social Theory},
  year = {2025},
  volume = {29},
  number = {1},
  pages = {63--84},
  doi = {10.1177/13684310241297906},
  abstract = {Deliberative democracy advances an emancipatory project of inclusion, equality, and freedom. Yet these ideals have been produced within a context structured by colonial power. This article argues that if deliberative democracy is to unfold its full democratic potential, it needs to face its colonial legacies and position a decolonizing ethos at its center. The article proposes a framework consisting of six moves toward decolonizing deliberative democracy -- three deconstructive and three reconstructive: 1. acknowledging modernity's violence; 2. recognizing epistemic injustices within the knowledge production of deliberative democracy; 3. criticizing the colonial drive of deliberative institutions; 4. theorizing from the bottom up by and with Indigenous and marginalized groups; 5. engaging in an open dialogue with the Global South scholarship; 6. focusing on emancipation.},
  note = {
  CORE ARGUMENT: Mendonca and Asenbaum propose a six-move framework for decolonizing deliberative democracy that combines deconstruction of its colonial legacies with reconstruction toward a genuinely emancipatory practice. They argue that deliberative democracy's ideals of inclusion, equality, and freedom are undermined by the colonial conditions of their production and require a decolonizing ethos to fulfill their promise.

  RELEVANCE: This 2025 paper represents the most recent systematic attempt to reconstruct deliberative democracy -- including its Habermasian variants -- in a way that confronts colonial legacies. It provides the reconstructive counterpoint to purely critical positions and addresses the question of whether a race-conscious Habermasian theory is possible.

  POSITION: Reconstructive decolonial approach to deliberative democracy theory; proposes internal transformation rather than rejection.
  },
  keywords = {deliberative-democracy, decolonial, colonialism, reconstruction, epistemic-justice, Global-South, Medium}
}

@article{biswas2022reimagining,
  author = {Biswas, Sujay},
  title = {Reimagining the Public Sphere: Commensurability and Communicative Rationality under Colonialism},
  journal = {The Journal of Asian Studies},
  year = {2022},
  volume = {81},
  number = {4},
  pages = {707--725},
  doi = {10.1017/S0021911822001188},
  abstract = {This article discusses the Habermasian public sphere as a realm constructed through communication and offers a critique of Habermas's concept of an intersubjectively shared lifeworld among participants as a fundamental prerequisite for communicative rationality in the discursive field. The article contends that the emergence of communicative rationality in the public sphere is unlikely to be facilitated by a singular and unitary modern public whose participants have commensurable languages and worlds. This argument is elaborated through an analysis of a public debate that occurred in 1888 between the headman of the Modh Baniya caste council and Gandhi, even though the discussion involved two people with an intersubjectively shared lifeworld who were engaged in deliberation as equals, the dialogue broke down, deepening divides.},
  note = {
  CORE ARGUMENT: Biswas argues that Habermas's presupposition of an intersubjectively shared lifeworld as the condition for communicative rationality fails under colonial conditions, where participants may nominally share a discursive space but inhabit incommensurable social worlds shaped by relations of domination. A historical case study from colonial India shows that even formally equal deliberation breaks down when colonial hierarchies pervade the lifeworld.

  RELEVANCE: This paper provides a historically grounded demonstration of how Habermasian communicative rationality breaks down under colonial conditions, extending the theoretical critique with an empirical case that shows the concept of the shared lifeworld cannot be assumed in contexts of racial and colonial hierarchies.

  POSITION: Postcolonial critique of Habermasian communicative rationality; uses historical case study rather than purely conceptual argument.
  },
  keywords = {Habermas, public-sphere, colonialism, communicative-rationality, lifeworld, incommensurability, Medium}
}

@article{issar2024contesting,
  author = {Issar, Siddhant},
  title = {Contesting the Racial Contract: Liberalism, Property, and Abolition},
  journal = {Political Theory},
  year = {2024},
  volume = {53},
  number = {1},
  pages = {34--61},
  doi = {10.1177/00905917241292638},
  abstract = {This essay argues that Charles Mills's normative vision for racial justice -- a reformed, race-attentive liberalism -- is fundamentally self-undermining because it embraces the liberal property form. Specifically, Issar shows how Mills's insistence on the practical utility of the property form for racial justice ignores both W.E.B. Du Bois's signal warning about the reactionary power of propertied interests and how the hegemony of Lockean liberalism is a key mediator of racial/colonial domination in the United States. The essay first shows how Mills's anti-racist, social democratic liberalism relies on and legitimizes a property rights framework. Drawing on Du Bois, Issar argues that Mills's reformed liberalism, by preserving the property form, places racial justice on an inherently unstable foundation while also excluding struggles for Indigenous sovereignty.},
  note = {
  CORE ARGUMENT: Issar argues that Mills's racial contract theory, despite its powerful critique of liberal social contract tradition, retains a commitment to the liberal property form that undermines its emancipatory goals. Drawing on Du Bois, Issar contends that a genuinely anti-racist politics requires challenging liberal property relations, not merely making them race-conscious.

  RELEVANCE: This recent engagement with Mills's racial contract theory clarifies the internal tensions in the most influential philosophical alternative to Habermasian liberal theory. It is relevant to the project by showing that the external critique of Habermas from a racial-contract standpoint faces its own structural tensions.

  POSITION: Critical extension and internal critique of Mills's racial contract framework, drawing on Du Bois's political economy; occupies a position to the left of Mills's "black radical liberalism."
  },
  keywords = {Mills, racial-contract, Du-Bois, liberalism, property, abolition, political-theory, Low}
}
