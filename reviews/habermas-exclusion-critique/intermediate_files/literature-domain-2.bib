@article{kavada2024caring,
  author = {Kavada, Anastasia},
  title = {The Caring Public Sphere: Reframing the Concept in an Era of Care Crises},
  journal = {Javnost -- The Public},
  year = {2024},
  volume = {31},
  number = {1},
  pages = {158--175},
  doi = {10.1080/13183222.2024.2314841},
  note = {
  CORE ARGUMENT: Kavada proposes reframing the public sphere concept through feminist care ethics, arguing that care's core commitments --- vulnerability, interdependence, and relational responsibility --- can reconceptualize the democratic functions of the public sphere beyond Habermas's rationalist model. This care-informed public sphere would understand its function not merely as rational opinion formation but also as developing citizens' care capacities, processing emotions as legitimate deliberative inputs, incorporating personal testimony as a mode of argumentation, and creating intimate publics alongside general ones. Universal access is reframed through care's attention to vulnerability and interdependence.

  RELEVANCE: This recent article represents the contemporary extension of feminist critique of Habermas in a distinctly constructive direction, moving from critique toward an alternative model. Its reconstruction of the public sphere through care ethics supplements Fraser's counter-publics framework and Young's communicative democracy with an emphasis on vulnerability and embodiment that is directly relevant to understanding how non-Western, non-rationalist modes of political communication might be valued in a more inclusive democratic theory.

  POSITION: Feminist care-ethics reconstruction of the public sphere beyond Habermasian rationalism.
  },
  keywords = {Kavada, care-ethics, public-sphere, feminist-reconstruction, vulnerability, Medium},
  abstract = {This article reframes the public sphere concept by bringing it dialogue with feminist theories of care. Care ethics foreground vulnerability and interdependence, suggesting that vulnerability is a shared condition and that we are all dependent on each other in order to survive. This helps to rethink the role of the public sphere within the democratic system, as a space not only for opinion formation, but also for the development of citizens with the necessary skills and dispositions to take care of the issues discussed in public. A focus on care also aids in reconsidering public affairs as issues that are intimately connected with needs and vulnerabilities; listening as an act of care; the processing of emotions as a key function of the deliberative process; and personal testimony as an important type of argumentation. The concept of care further helps in refining the universal access principle by highlighting the importance of intimate spaces, where participants feel safe to be vulnerable, and of how these multiple publics can be interconnected through mobilising relationships of interdependence. Finally, it allows us to consider "care work" for communication infrastructure, including both media technologies and people's bodies, as a constitutive part of the public sphere.},
  abstract_source = {s2},
}

@article{young1985impartiality,
  author = {Young, Iris Marion},
  title = {Impartiality and the Civic Public: Some Implications of Feminist Critiques of Moral and Political Theory},
  journal = {Praxis International},
  year = {1985},
  volume = {5},
  pages = {381--401},
  note = {
  CORE ARGUMENT: Young argues that the ideal of impartiality in liberal and republican political theory --- which requires that citizens abstract from their particular identities, interests, and perspectives when deliberating about the common good --- is not a neutral procedural requirement but an ideological norm that systematically disadvantages women and other marginalized groups. The impartial standpoint is tacitly modeled on the dominant group's perspective while presenting itself as universal; women's and other marginalized perspectives are thus coded as "partial" and excluded from legitimate public discourse.

  RELEVANCE: This early article establishes the foundational argument that deliberative norms themselves, not merely the composition of deliberating bodies, are sites of exclusion. This thesis is foundational for understanding how the ideal speech situation's requirement of rational argumentation excludes not just empirically but normatively those whose epistemic and communicative styles deviate from the dominant standard. The argument extends naturally to colonial subjects whose communicative and epistemic traditions are dismissed as "pre-rational" or "particular" against Habermas's universal model.

  POSITION: Foundational feminist critique of the ideal of impartiality in liberal political theory.
  },
  keywords = {Young, impartiality, civic-public, feminist-critique, exclusion, deliberation, Low, INCOMPLETE, no-abstract}
}

@article{hogemann2024selectivity,
