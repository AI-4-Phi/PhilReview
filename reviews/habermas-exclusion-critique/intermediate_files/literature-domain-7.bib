@book{allen2016endprogress,
  author = {Allen, Amy},
  title = {The End of Progress: Decolonizing the Normative Foundations of Critical Theory},
  year = {2016},
  publisher = {Columbia University Press},
  doi = {10.7312/alle17324},
  abstract = {Amy Allen identifies two main goals for her book. The first is to critique Habermas and two of his main successors -- Axel Honneth and Rainer Forst -- as "wedded to problematically Eurocentric and/or foundationalist strategies for grounding normativity," including implicitly "colonialist" notions of intellectual and social progress. The second is to "decolonize Frankfurt School critical theory" by offering alternative bases for normativity that take on board the concerns of "decolonial theory," critical race theory, and queer theory that have been sidelined by mainstream critical theorists (p. xii). Her argumentative strategy is to set up a trilemma: (a) the "long-standing" problem of relativism, of which postcolonial theory is accused; (b) justifying rational autonomy or social freedom as outcomes of "a progressive process of social evolution or sociocultural learning," which turns out to depend on a problematic conception of progress already accomplished; and (c) rationalist foundationalism (e.g. of neo-Kantian varieties) which ties political philosophy to ideal theory and makes social criticism into a form of "applied ethics." Allen's thesis is that in trying to avoid horns (a) and (c), Habermas and Honneth each fall into two variants of horn (b): they try to avoid the "twin evils of foundationalism and relativism" by reconstructing the norms emerging from the implicit trajectory of social history. While Allen agrees with grounding critical theory in the actual social world, she argues that their versions depend on a (morally and factually) suspect idea of progress.},
  abstract_source = {ndpr},
  note = {
  CORE ARGUMENT: Allen argues that Habermas and Honneth both ground their critical theories in a Eurocentric metanarrative of progress -- the idea that modern European rationality represents a developmental advance over other forms of life. She argues that this commitment is neither theoretically necessary nor normatively defensible, and proposes a decolonized alternative grounded in Adorno's negative dialectics and Foucauldian genealogy, which can criticize domination without presupposing Eurocentric developmental standards.

  RELEVANCE: Allen's book sits at the crucial boundary between critique and reconstruction for this domain: she accepts that a form of critical theory is needed but argues that Habermas's version cannot be reformed from within because its normative foundations are structurally Eurocentric. This is the strongest internal challenge to sympathetic reconstructors like Benhabib and Bohman, forcing the question of whether any adequate response to Dussel requires abandoning the progressivist assumptions of Habermasian critical theory altogether.

  POSITION: Postcolonial critique that proposes reconstruction of critical theory on non-Eurocentric foundations, constituting a near-rejection of Habermasian universalism.
  },
  keywords = {allen, postcolonial, decolonial, critical-theory, eurocentric, reconstruction, High}
}

@incollection{fraser1992rethinking,
  author = {Fraser, Nancy},
  title = {Rethinking the Public Sphere: {A} Contribution to the Critique of Actually Existing Democracy},
  booktitle = {Justice Interruptus},
  year = {2014},
  pages = {79--108},
  publisher = {Routledge},
  doi = {10.4324/9781315822174-11},
  abstract = {Today in the U.S. we hear a great deal of ballyhoo about "the triumph of liberal democracy" and even "the end of history." Yet there is still a great deal to object to in our own "actually existing democracy," and the project of a critical social theory of the limits of democracy in late capitalist societies remains as relevant as ever. In fact, this project seems to me to have acquired a new urgency at a time when "liberal democracy" is being touted as the ne plus ultra of social systems for countries that are emerging from Soviet-style state socialism, Latin American military dictatorships, and southern African regimes of racial domination. Those of us who remain committed to theorizing the limits of democracy in late capitalist societies will find in the work of Jurgen Habermas an indispensable resource. I mean the concept of "the public sphere," originally elaborated in his 1962 book, The Structural Transformation of the Public Sphere, and subsequently resituated but never abandoned in his later work.},
  abstract_source = {s2},
  note = {
  CORE ARGUMENT: Fraser's most cited critique and partial reconstruction of Habermas's public sphere theory. She identifies four exclusionary assumptions in the Habermasian public sphere -- bracketing of social inequalities, singular public as superior to multiple publics, exclusion of private interests, and restriction to nation-state framing -- and proposes counterpublics (subaltern spheres where marginalized groups elaborate counter-discourses) as both critique and remedy. Crucially, she retains the normative ideal of public deliberation while showing how Habermas's particular model of it is exclusionary.

  RELEVANCE: Fraser's essay is the paradigmatic model of immanent critique-and-reconstruction: she does not reject communicative ethics but diagnoses how actual deliberative institutions fail its own standards. This is the methodological template for assessing whether Habermasian theory can correct its exclusionary features without abandoning its core.

  POSITION: Feminist critique that retains the Habermasian normative framework while diagnosing the exclusionary conditions of its realization.
  },
  keywords = {fraser, public-sphere, subaltern-counterpublics, feminist-critique, inclusion, High}
}

