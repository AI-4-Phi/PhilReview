  keywords  = {natural-law, universalism, postmetaphysical, modernity, Medium}
}

@book{young2000inclusion,
  author = {Young, Iris Marion},
  title = {Inclusion and Democracy},
  year = {2000},
  publisher = {Oxford University Press},
  address = {Oxford},
  doi = {10.1093/0198297556.001.0001},
  note = {
  CORE ARGUMENT: Young systematically challenges the deliberative democracy model associated with Habermas and Rawls on grounds that its privileged norms of rational argumentation, impartiality, and orderly discourse silently exclude or disadvantage groups whose communicative styles differ from those of dominant groups. Young proposes "communicative democracy" as an alternative, which legitimizes greeting, rhetoric, and narrative alongside formal argument as valid modes of political communication. She argues that structural social differences require mechanisms of group representation to ensure genuine inclusion rather than formal equality, and develops a politics of difference that contests the civic republican ideal of a homogeneous public.

  RELEVANCE: Young's critique is central to demonstrating that the very procedures of deliberation are sites of exclusion, not merely the content of who is invited to participate. This structural critique of deliberative norms extends naturally to the exclusion of colonized peoples and non-Western speakers whose communicative forms are devalued in the Habermasian public sphere. Her defense of group representation and attention to structural disadvantage provides a framework applicable to understanding decolonial demands for epistemic reparation.

  POSITION: Radical democratic feminist critique of deliberative democracy, advocating communicative democracy.
  },
  keywords = {Young, deliberative-democracy, communicative-democracy, group-representation, difference, High},
  abstract = {Abstract Theorists of deliberative democracy have not sufficiently attended to the ways that processes of debate and decision making often marginalize individuals and groups not only because of their lesser social and economic power but also because the norms of political discussion are biased against some forms of expression. Democratic theory should include forms of acknowledgement, narrative, rhetoric, and public protest, along with argument, in its account of the normative ideals of political communication. Inclusive democracy involves more than the formal equality of all individuals and groups to enter the political process, but entails taking special measures to compensate for the social and economic inequalities of unjust social structures. Such special measures may require forms of group representation, in order that the particular social perspective of group members gains voice. Residential segregation poses particular problems for inclusive democracy in many societies. Organizing metropolitan governance systems with diverse representation may respond to such problems. In a globalized world, finally, the project of inclusive democracy involves criticizing adherence to nation-state sovereignty and creating global level democratic institutions.},
  abstract_source = {openalex},
}

@book{landes1988women,
  author = {Landes, Joan B.},
  title = {Women and the Public Sphere in the Age of the French Revolution},
  year = {1988},
  publisher = {Cornell University Press},
  address = {Ithaca, NY},
  note = {
  CORE ARGUMENT: Landes argues, through a historical study of the French Revolution and its public sphere, that the bourgeois republican public sphere was not merely accidentally exclusive of women but was constitutively defined against femininity. The gendered exclusion of women was not a residual feature to be corrected by extending the universalist ideal; rather, the ideal of rational public discourse was actively constituted through the repudiation of aristocratic femininity and the domestication of bourgeois femininity. Habermas's historical account idealizes a sphere whose very formation depended on the exclusion of women and their relegation to a domesticated private sphere.

  RELEVANCE: This is the key historical study grounding the feminist critique of Habermas's public sphere theory in concrete historical analysis rather than abstract normative argument. It demonstrates that the public/private distinction Habermas takes as a formal procedural achievement is in fact a gendered ideological construction. This historical argument directly parallels the decolonial critique that the bourgeois public sphere was simultaneously defined against colonial subjects.

  POSITION: Historical feminist critique: the gendered constitution of the bourgeois public sphere.
  },
  keywords = {Landes, public-sphere, gender, French-Revolution, historical-critique, public-private, High, INCOMPLETE, no-abstract}
}

@book{meehan1995feminists,
