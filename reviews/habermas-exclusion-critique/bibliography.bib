@article{mcnay2003havingbothways,
  author = {McNay, Lois},
  title = {Having it Both Ways: The Incompatibility of Narrative Identity and Communicative Ethics in Feminist Thought},
  journal = {Theory, Culture \& Society},
  year = {2003},
  volume = {20},
  number = {6},
  pages = {1--20},
  doi = {10.1177/0263276403206001},
  note = {
  CORE ARGUMENT: McNay argues that there is a fundamental tension between feminist uses of narrative identity --- which emphasize the particularity, contingency, and embodied character of selfhood --- and the proceduralist communicative ethics derived from Habermas. While Benhabib's interactive universalism attempts to bridge these frameworks by incorporating the concrete other into discourse ethics, McNay contends that this synthesis is ultimately unstable: the narrative dimensions of identity resist the abstraction required by communicative procedures, and the disembodied rationalism of discourse ethics cannot fully accommodate feminist insights about the social constitution of the self.

  RELEVANCE: This article engages a fundamental tension in feminist reconstructions of Habermas: can the embodied, narrative, relational self that feminist theory valorizes be accommodated within the communicative framework's proceduralist universalism? This tension is directly relevant to the decolonial critique of Habermas, since colonial subjects are similarly defined by particular histories, relationships, and embodied experiences that the ideal speech situation abstracts away.

  POSITION: Critical feminist assessment of the Benhabib-Habermas synthesis, arguing narrative identity and communicative ethics are incompatible.
  },
  keywords = {McNay, narrative-identity, communicative-ethics, Benhabib, feminist-critique, subjectivity, Medium},
  abstract = {As an alternative to post-structural accounts of 'performative' agency (e.g. Judith Butler), Habermasian feminists (Seyla Benhabib and Maria Pia Lara) propose the idea of the narrative self. The concept of narrative is seen as a way of bridging the gap between the formalism of Habermas's idea of communicative ethics and the dispersion that arises from the post-structural critique of the subject. The idea of the narrative self undoubtedly yields an active and creative account of agency. However, I argue that the attempt to reconcile a narrative concept of the self within a theory of communicative ethics results in a limited understanding of identity and agency in the context of the systemic reproduction of gender inequalities.},
  abstract_source = {openalex},
}

@incollection{benhabib2020generalized,
  author = {Benhabib, Seyla},
  title = {The Generalized and the Concrete Other: The {Kohlberg-Gilligan} Controversy and Feminist Theory},
  booktitle = {Situating the Self},
  year = {2020},
  pages = {148--177},
  publisher = {Routledge},
  doi = {10.4324/9781003059516-8},
  note = {
  CORE ARGUMENT: Benhabib critiques Habermas's and Kohlberg's moral frameworks for privileging the standpoint of the "generalized other" --- an abstract, disembodied rational being with no particular history or relationships --- at the expense of the "concrete other," who has specific identities, needs, and emotional attachments. This suppression of the concrete other, Benhabib argues, is both philosophically distorting and politically exclusionary, systematically relegating the care relations, emotional labor, and relational dimensions of morality to the private sphere where they remain invisible to public moral-political discourse. The essay draws on Gilligan's "different voice" to challenge Habermasian moral universalism while retaining a procedural commitment to justification.

  RELEVANCE: This essay provides the core philosophical grounding for feminist objections to Habermasian universalism: the abstraction of the "generalized other" is the mechanism through which gender (and by extension, other markers of particularity) is excluded from moral-political deliberation. This argument is central to understanding how Habermas's ideal speech situation structurally excludes any Other defined by particular rather than universal characteristics --- whether that Other is gendered, racialized, or colonized.

  POSITION: Feminist critique of moral universalism, advocating recognition of the concrete other within discourse ethics.
  },
  keywords = {Benhabib, generalized-other, concrete-other, feminist-ethics, universalism, care, Medium, INCOMPLETE, no-abstract}
}

@article{dieleman2015epistemic,
  author = {Dieleman, Susan},
  title = {Epistemic Justice and Democratic Legitimacy},
  journal = {Hypatia},
  year = {2015},
  volume = {30},
  number = {4},
  pages = {794--810},
  doi = {10.1111/hypa.12173},
  note = {
  CORE ARGUMENT: Dieleman argues that epistemic justice -- specifically overcoming testimonial and hermeneutical injustice -- is a necessary precondition of democratic legitimacy in a Habermasian sense. Democratic procedures that systematically deflate the credibility of marginalized speakers fail their own normative standards, because legitimate democratic outcomes require that all affected voices carry appropriate epistemic weight.

  RELEVANCE: This paper most directly bridges Fricker's epistemic injustice framework and Habermasian deliberative democracy, arguing that the two frameworks are mutually implicated: Habermas's legitimacy conditions require epistemic justice as a prior condition. Central to mapping how epistemic injustice constitutes a distinctively Habermasian critique.

  POSITION: Situates epistemic justice as internal to, rather than external criticism of, the normative standards of deliberative democracy.
  },
  keywords = {epistemic-injustice, deliberative-democracy, democratic-legitimacy, Habermas, High},
  abstract = {The deliberative turn in political philosophy sees theorists attempting to ground democratic legitimacy in free, rational, and public deliberation among citizens. However, feminist theorists have criticized prominent accounts of deliberative democracy, and of the public sphere that is its site, for being too exclusionary. Iris Marion Young, Nancy Fraser, and Seyla Benhabib show that deliberative democrats generally fail to attend to substantive inclusion in their conceptions of deliberative space, even though they endorse formal inclusion. If we take these criticisms seriously, we are tasked with articulating a substantively inclusive account of deliberation. I argue in this article that enriching existing theories of deliberative democracy with Fricker's conception of epistemic in/justice yields two specific benefits. First, it enables us to detect instances of epistemic injustice, and therefore failures of inclusion, within deliberative spaces. Second, it can act as a model for constructing deliberative spaces that are more inclusive and therefore better able to ground democratic legitimacy.},
  abstract_source = {openalex},
}

@book{dean1996solidarity,
  author = {Dean, Jodi},
  title = {Solidarity of Strangers: Feminism After Identity Politics},
  year = {1996},
  publisher = {University of California Press},
  address = {Berkeley, CA},
  note = {
  CORE ARGUMENT: Dean argues that feminist politics requires a theory of solidarity that moves beyond both the politics of identity and the Habermasian model of communicative rationality. Against identity politics, she argues that feminist solidarity cannot be grounded in a shared essence or common experience; against Habermas, she argues that the abstract ideal of communicative reason fails to account for the concrete historical conditions of women's exclusion from public discourse. Dean draws on postmodern feminism and reflective solidarity to propose a model of feminist political community grounded in shared commitment to transformative political struggle rather than shared identity.

  RELEVANCE: Dean's critique engages both the feminist politics of identity and the Habermasian public sphere simultaneously, making it relevant to understanding the limits of communicative models of politics for feminist and other marginalized groups. Her critique of the abstract universalism of communicative reason parallels the decolonial critique that Habermas's universalism abstracts from the concrete historical conditions of colonial domination.

  POSITION: Post-identity feminist critique of Habermasianism and identity politics, proposing reflective solidarity.
  },
  keywords = {Dean, solidarity, identity-politics, feminist-critique, communicative-reason, postmodern-feminism, Medium, INCOMPLETE, no-abstract}
}

@article{fiig2011powerful,
  author = {Fiig, Christina},
  title = {A Powerful, Opinion-Forming Public? {Rethinking} the {Habermasian} Public Sphere in a Perspective of Feminist Theory and Citizenship},
  journal = {Distinktion: Journal of Social Theory},
  year = {2011},
  volume = {12},
  number = {3},
  pages = {291--308},
  doi = {10.1080/1600910x.2011.621049},
  note = {
  CORE ARGUMENT: Fiig rethinks the Habermasian public sphere from a feminist theory and citizenship perspective, examining the extent to which the concepts of opinion formation and will formation in Habermas's political theory can accommodate feminist demands for inclusion and gendered representation. She draws on Nordic feminist theories of citizenship and Young's communicative democracy to argue that the Habermasian model requires substantial reconstruction to account for gender as a structural axis of political exclusion, particularly regarding who has effective access to opinion-forming publics and whose interests are systematically excluded.

  RELEVANCE: This article directly addresses the interface of feminist citizenship theory with Habermasian public sphere theory, providing an empirically grounded account of gendered exclusion that complements more abstract philosophical critiques. Its focus on the structural conditions of opinion formation illuminates how formal inclusion coexists with substantive exclusion --- a dynamic directly relevant to understanding how colonized peoples can be formally included while remaining substantively excluded.

  POSITION: Feminist citizenship critique of the Habermasian public sphere from a Nordic political theory perspective.
  },
  keywords = {Fiig, feminist-citizenship, public-sphere, opinion-formation, Habermas, gender-exclusion, Medium},
  abstract = {The article's main argument is that a public sphere forms a constructive arena for citizenship practice if we by citizenship understand four components: rights, responsibilities, participation and identity as formulated by Gerard Delanty. The Habermasian (re)working of the concept remains an essential contribution to theories of democracy and of political participation. With this in mind, the author's ambition is to address and to rework a specific type of public: an opinion-forming public within a framework of feminist political theory. The article is informed by the assumption that an opinion-forming public sphere is a central democratic arena in which the process of deliberation has intrinsic value. The analysis draws on a debate where a broader concept of communication than the one proposed by Habermas has been discussed. Iris Marion Young's concept of 'inclusive communication', greeting, rhetoric and narratives, is an attempt to widen public communication and further an ambition of constructing a concept of a more inclusive public sphere. The author suggests that feminist political theory goes some of the way towards reconstructing a concept of an opinion-forming public sphere within a Habermasian framework. The empirical cases (the women's rights as human rights movement and a Scandinavian feminist debate) illustrate how participants in such a public can use the public arena for internal learning by employing a broad concept of communication such as narratives and storytelling as a means of politicizing their situation and as a consciousness-raising and identity-giving process. The article also suggests that the positive reasoning around an extended concept of communication can be criticized. The overarching idea is that the type of communication in itself does not provide the democratic inclusion and the egalitarian communication it intends and that decisions made as a result of it can be misleading.},
  abstract_source = {openalex},
}

@article{kavada2024caring,
  author = {Kavada, Anastasia},
  title = {The Caring Public Sphere: Reframing the Concept in an Era of Care Crises},
  journal = {Javnost -- The Public},
  year = {2024},
  volume = {31},
  number = {1},
  pages = {158--175},
  doi = {10.1080/13183222.2024.2314841},
  note = {
  CORE ARGUMENT: Kavada proposes reframing the public sphere concept through feminist care ethics, arguing that care's core commitments --- vulnerability, interdependence, and relational responsibility --- can reconceptualize the democratic functions of the public sphere beyond Habermas's rationalist model. This care-informed public sphere would understand its function not merely as rational opinion formation but also as developing citizens' care capacities, processing emotions as legitimate deliberative inputs, incorporating personal testimony as a mode of argumentation, and creating intimate publics alongside general ones. Universal access is reframed through care's attention to vulnerability and interdependence.

  RELEVANCE: This recent article represents the contemporary extension of feminist critique of Habermas in a distinctly constructive direction, moving from critique toward an alternative model. Its reconstruction of the public sphere through care ethics supplements Fraser's counter-publics framework and Young's communicative democracy with an emphasis on vulnerability and embodiment that is directly relevant to understanding how non-Western, non-rationalist modes of political communication might be valued in a more inclusive democratic theory.

  POSITION: Feminist care-ethics reconstruction of the public sphere beyond Habermasian rationalism.
  },
  keywords = {Kavada, care-ethics, public-sphere, feminist-reconstruction, vulnerability, Medium},
  abstract = {This article reframes the public sphere concept by bringing it dialogue with feminist theories of care. Care ethics foreground vulnerability and interdependence, suggesting that vulnerability is a shared condition and that we are all dependent on each other in order to survive. This helps to rethink the role of the public sphere within the democratic system, as a space not only for opinion formation, but also for the development of citizens with the necessary skills and dispositions to take care of the issues discussed in public. A focus on care also aids in reconsidering public affairs as issues that are intimately connected with needs and vulnerabilities; listening as an act of care; the processing of emotions as a key function of the deliberative process; and personal testimony as an important type of argumentation. The concept of care further helps in refining the universal access principle by highlighting the importance of intimate spaces, where participants feel safe to be vulnerable, and of how these multiple publics can be interconnected through mobilising relationships of interdependence. Finally, it allows us to consider "care work" for communication infrastructure, including both media technologies and people's bodies, as a constitutive part of the public sphere.},
  abstract_source = {s2},
}

@article{young1985impartiality,
  author = {Young, Iris Marion},
  title = {Impartiality and the Civic Public: Some Implications of Feminist Critiques of Moral and Political Theory},
  journal = {Praxis International},
  year = {1985},
  volume = {5},
  pages = {381--401},
  note = {
  CORE ARGUMENT: Young argues that the ideal of impartiality in liberal and republican political theory --- which requires that citizens abstract from their particular identities, interests, and perspectives when deliberating about the common good --- is not a neutral procedural requirement but an ideological norm that systematically disadvantages women and other marginalized groups. The impartial standpoint is tacitly modeled on the dominant group's perspective while presenting itself as universal; women's and other marginalized perspectives are thus coded as "partial" and excluded from legitimate public discourse.

  RELEVANCE: This early article establishes the foundational argument that deliberative norms themselves, not merely the composition of deliberating bodies, are sites of exclusion. This thesis is foundational for understanding how the ideal speech situation's requirement of rational argumentation excludes not just empirically but normatively those whose epistemic and communicative styles deviate from the dominant standard. The argument extends naturally to colonial subjects whose communicative and epistemic traditions are dismissed as "pre-rational" or "particular" against Habermas's universal model.

  POSITION: Foundational feminist critique of the ideal of impartiality in liberal political theory.
  },
  keywords = {Young, impartiality, civic-public, feminist-critique, exclusion, deliberation, Low, INCOMPLETE, no-abstract}
}

@article{hogemann2024selectivity,
  author = {Hogemann, Edna Raquel},
  title = {The Selectivity of the Public Sphere and Subaltern Public Spheres: Perspectives of {Habermas} and {Nancy Fraser} and Their Impact on Human Rights Public Policies},
  journal = {Revista Internacional Consinter de Direito},
  year = {2024},
  pages = {307--325},
  doi = {10.19135/revista.consinter.00019.13},
  note = {
  CORE ARGUMENT: This comparative study examines the selectivity of public and subaltern spheres through Habermas's and Fraser's theories, focusing on implications for human rights policies. The study finds that while both theorists offer valuable frameworks, Fraser's emphasis on subaltern counterpublics better addresses the need for inclusive human rights policy-making by incorporating marginalized voices that Habermas's model implicitly excludes through its procedural selectivity.

  RELEVANCE: This recent article provides a contemporary application of the Fraser-Habermas debate to the domain of human rights policy, demonstrating the ongoing practical relevance of feminist counter-public sphere theory for addressing structural exclusions in political institutions. The focus on human rights policy connects the theoretical debate to concrete institutional dimensions relevant to the project's concern with exclusion.

  POSITION: Applied assessment of Habermas-Fraser debate for human rights policy, favoring Fraser's counter-publics framework.
  },
  keywords = {Hogemann, subaltern-counterpublics, human-rights, Fraser, Habermas, policy, Low},
  abstract = {This study examines the selectivity of public and subaltern spheres through the theories of Juergen Habermas and Nancy Fraser, focusing on their implications for human rights policies. The objectives are defined to analyze Habermas's and Fraser's conceptualizations of public and subaltern spheres; to identify how these perspectives influence human rights policy formulation and implementation and to explore the challenges and opportunities these theories present for marginalized voices. The study's central issue is understanding the impact of public sphere selectivity on policy inclusivity and effectiveness, hypothesizing that Habermas's and Fraser's models, though insightful, differ in their implications for integrating subaltern voices. Using a qualitative methodology, the study conducts a literature review and critical analysis of Habermas's and Fraser's works. It involves reviewing key texts and secondary sources, comparing theoretical frameworks, and examining case studies of human rights policies. The findings show that while both theories offer valuable insights, Fraser's emphasis on subaltern counterpublics better addresses the need for inclusive policy-making by incorporating marginalized voices.},
  abstract_source = {s2},
}

@article{quijano2000coloniality,
  author = {Quijano, An{\'i}bal},
  title = {Coloniality of Power and Eurocentrism in Latin America},
  journal = {International Sociology},
  year = {2000},
  volume = {15},
  number = {2},
  pages = {215--232},
  doi = {10.1177/0268580900015002005},
  abstract = {The globalization of the world is, in the first place, the culmination of a process that began with the constitution of America and world capitalism as a Euro-centered colonial/modern world power. One of the foundations of that pattern of power was the social classification of the world population upon the base of the idea of race, a mental construct that expresses colonial experience and that pervades the most important dimensions of world power, including its specific rationality: Eurocentrism. This article discusses some implications of that coloniality of power in Latin American history.},
  abstract_source = {openalex},
  note = {
  CORE ARGUMENT: Quijano argues that the colonial imposition of racial classification on global populations constituted a new pattern of world power -- the "coloniality of power" -- that did not end with formal decolonization and continues to structure global hierarchies of knowledge, labour, and subjectivity. Race, as a social category, is intrinsic to modernity, not external to it; Europe consolidated its self-image as rational and modern precisely by casting colonized peoples as its inferior other.

  RELEVANCE: This paper provides the foundational decolonial concept -- coloniality of power -- that underpins critique of Habermasian theory: if modernity and coloniality are structurally co-constituted, then Habermas's reconstruction of modernity's emancipatory potential as immanent to Western rationalization is, from the start, built on a foundation it cannot acknowledge without self-undermining. The concept directly informs how Dussel, Mignolo, and Allen challenge Habermas.

  POSITION: Foundational decolonial argument that modernity and coloniality are inseparable co-constitutive formations.
  },
  keywords = {coloniality, modernity, race, Eurocentrism, Latin America, High}
}

@article{wynter2003unsettling,
  author = {Wynter, Sylvia},
  title = {Unsettling the Coloniality of Being/Power/Truth/Freedom: Towards the Human, After Man, Its Overrepresentation---An Argument},
  journal = {CR: The New Centennial Review},
  year = {2003},
  volume = {3},
  number = {3},
  pages = {257--337},
  doi = {10.1353/ncr.2004.0015},
  note = {
  CORE ARGUMENT: Wynter argues that Western modernity installed "Man" (the Enlightenment bourgeois subject) as the overrepresented conception of the human, displacing the theological "Christian" with the secular "rational Man" and consigning racialized others -- Native, Black, colonized populations -- to a zone of sub-humanity. Emancipation requires not simply including these others within the existing humanist framework but overthrowing the epistemic grid that makes "Man" the measure of all humanity.

  RELEVANCE: Wynter's argument exposes a structural problem for Habermasian communicative rationality: if the very notion of communicative competence and rational agency is premised on an overrepresentation of Western Man as the norm of the human, then the ideal speech situation cannot simply be extended to include the colonized -- the framework itself requires replacement. This provides the decolonial ground for critiquing discourse ethics as inherently exclusive.

  POSITION: Decolonial humanist critique that moves beyond postcolonial representation to question the epistemic foundations of Western humanism itself.
  },
  keywords = {coloniality-of-being, humanism, decolonial, race, Wynter, High, INCOMPLETE, no-abstract}
}

@article{maldonadotorres2007coloniality,
  author = {Maldonado-Torres, Nelson},
  title = {On the Coloniality of Being},
  journal = {Cultural Studies},
  year = {2007},
  volume = {21},
  number = {2-3},
  pages = {240--270},
  doi = {10.1080/09502380601162548},
  abstract = {The concept of coloniality of Being emerged in discussions of a diverse group of scholars doing work on coloniality and decolonization. More particularly, we owe the idea to Walter D. Mignolo, who first proposed thinking about a coloniality of Being to complement his analysis of the coloniality of power and the coloniality of knowledge.},
  abstract_source = {openalex},
  note = {
  CORE ARGUMENT: Drawing on Fanon and Dussel, Maldonado-Torres develops the concept of the "coloniality of being" to describe how colonial conquest introduced a systematic devaluation of the being and humanity of colonized peoples -- a damno (damnation) that operates at the ontological level below the epistemological. Colonial modernity is constituted by a permanent "war" against the colonized that is rendered invisible by liberal political philosophy's claim to universal human dignity.

  RELEVANCE: The coloniality of being concept directly challenges Habermas's presupposition that communicative action operates within a shared lifeworld: where coloniality structures who counts as a full speaker and whose suffering counts as a legitimate validity claim, the conditions for symmetrical discourse are not merely difficult to achieve but ontologically foreclosed. Connects Wynter's epistemic critique to Fanon's phenomenology.

  POSITION: Decolonial ontological argument extending Quijano's coloniality of power to the level of lived existence and subjectivity.
  },
  keywords = {coloniality-of-being, Fanon, Dussel, ontology, decolonial, High}
}

@book{allen2016end,
  author = {Allen, Amy},
  title = {The End of Progress: Decolonizing the Normative Foundations of Critical Theory},
  year = {2016},
  publisher = {Columbia University Press},
  doi = {10.7312/alle17324},
  abstract = {Allen identifies two main goals: to critique Habermas and successors (Honneth, Forst) as wedded to problematically Eurocentric and foundationalist strategies for grounding normativity, including implicitly colonialist notions of intellectual and social progress; and to decolonize Frankfurt School critical theory by offering alternative bases for normativity informed by decolonial theory, critical race theory, and queer theory. Her argumentative strategy sets up a trilemma between relativism, progressivist foundationalism, and rationalist foundationalism, arguing that Habermas and Honneth fall into progressivism by reconstructing norms from the implicit trajectory of Western social history, thereby relying on a morally and factually suspect idea of progress entangled with the legacies of racism, colonialism, and imperialism.},
  abstract_source = {ndpr},
  note = {
  CORE ARGUMENT: Allen argues that the Frankfurt School -- including Habermas -- relies on a Hegelian-Kantian philosophy of history in which Western modernity represents "progress" over non-Western forms of life. This progressivism is not incidental but structural: Habermas's post-conventional morality, discourse ethics, and account of rational learning all presuppose a developmental hierarchy that relegates non-Western lifeworlds to earlier stages. Allen calls for a "decolonizing" of critical theory that abandons this progressivist framework while retaining the project of immanent critique.

  RELEVANCE: This is the most systematic Frankfurt School internal critique of Habermasian Eurocentrism and is essential to the domain. Allen engages directly with postcolonial and decolonial thinkers (Spivak, Mignolo, Quijano) and with the Frankfurt tradition (Adorno, Horkheimer, Habermas) to show how the "motivated silence" on colonialism is structural, not merely an oversight. The book establishes the theoretical stakes for how Dussel's transmodern critique can be read as a decolonizing move.

  POSITION: Internal Frankfurt School critique calling for decolonization of critical theory's progressivist normative architecture.
  },
  keywords = {Frankfurt-School, Eurocentrism, progress, decolonial, Allen, High}
}

@book{mignolo2000local,
  author = {Mignolo, Walter D.},
  title = {Local Histories/Global Designs: Coloniality, Subaltern Knowledges, and Border Thinking},
  year = {2000},
  publisher = {Princeton University Press},
  note = {
  CORE ARGUMENT: Mignolo argues that Western universalism -- including Habermas's discourse ethics and Apel's transcendental pragmatics -- operates as a "local history" that has universalized itself into a global design, erasing its own geopolitical locus of enunciation. Against this, Mignolo proposes "border thinking" (pensamiento fronterizo), a form of reasoning from the colonial difference that does not seek inclusion in Western modernity but rather de-links from its epistemic hegemony, drawing on suppressed subaltern knowledges.

  RELEVANCE: Mignolo's critique directly targets the kind of universalism Habermas claims for discourse ethics: the argument is not that the ideal speech situation is practically inaccessible but that its philosophical grounding enacts the very colonial gesture of treating a particular epistemic standpoint as universal. Mignolo's notion of "delinking" provides the decolonial alternative to Habermasian reformism that Dussel echoes through the concept of transmodernity.

  POSITION: Decolonial epistemological argument for border thinking against Western epistemic universalism.
  },
  keywords = {border-thinking, coloniality, Mignolo, decolonial, knowledge, High, INCOMPLETE, no-abstract}
}

@book{chakrabarty2000provincializing,
  author = {Chakrabarty, Dipesh},
  title = {Provincializing Europe: Postcolonial Thought and Historical Difference},
  year = {2000},
  publisher = {Princeton University Press},
  note = {
  CORE ARGUMENT: Chakrabarty argues that European thought -- including the post-Hegelian social theory that underpins Habermas's reconstruction of modernity -- is simultaneously indispensable and inadequate for understanding the non-Western world. European concepts like democracy, citizenship, and communicative reason carry a "hyperreal" status that renders other histories provincial. The project of "provincializing Europe" does not reject European thought but works on its historicity and provinciality from within.

  RELEVANCE: Chakrabarty's argument provides the postcolonial hermeneutic complement to the decolonial tradition: where Mignolo calls for delinking, Chakrabarty works within the tension between European universals and non-European particular histories. This maps onto the debate about whether Habermas's theory can be reconstructed from global perspectives (Bailey) or whether its universalism is irreparably Eurocentric (Allen, Mignolo).

  POSITION: Postcolonial critique of European universals that provincializes rather than rejects them, creating productive tension with decolonial calls for full epistemic delinking.
  },
  keywords = {provincializing-Europe, Subaltern-Studies, postcolonial, modernity, High, INCOMPLETE, no-abstract}
}

@book{mccarthy2009race,
  author = {McCarthy, Thomas},
  title = {Race, Empire, and the Idea of Human Development},
  year = {2009},
  publisher = {Cambridge University Press},
  doi = {10.1017/cbo9780511814044},
  abstract = {In an exciting study of ideas accompanying the rise of the West, Thomas McCarthy analyzes the ideologies of race and empire that were integral to European-American expansion. He highlights the central role that conceptions of human development (civilization, progress, modernization, and the like) played in answering challenges to legitimacy through a hierarchical ordering of difference. Focusing on Kant and natural history in the eighteenth century, Mill and social Darwinism in the nineteenth, and theories of development and modernization in the twentieth, he proposes a critical theory of development which can counter contemporary neoracism and neoimperialism, and can accommodate the multiple modernities now taking shape. Offering an unusual perspective on the past and present of our globalizing world, this book will appeal to scholars and advanced students of philosophy, political theory, the history of ideas, racial and ethnic studies, social theory, and cultural studies.},
  abstract_source = {openalex},
  note = {
  CORE ARGUMENT: McCarthy -- a leading commentator on Habermas -- argues that Western liberal and critical theory has been systematically disfigured by its entanglement with racial ideology and empire. The book traces how Kant's racial hierarchy, nineteenth-century social Darwinism, and liberal imperialism have shaped the developmental schemas that persist in twentieth-century critical theory, including Habermas's account of moral learning. McCarthy calls for a critical reckoning with this legacy within the Frankfurt School tradition.

  RELEVANCE: McCarthy's book represents a significant internal critique from within Habermasian scholarship: it takes the developmental hierarchy that Allen later analyses as "progressivism" and shows its concrete historical form in racial ideology and imperial practice. This book bridges postcolonial scholarship and the immanent critique of Habermasian theory, making it directly relevant to understanding how exclusions are structured into the theory of communicative rationality.

  POSITION: Internal Habermasian critique exposing the entanglement of critical theory's developmental schemas with racial ideology and imperial history.
  },
  keywords = {race, empire, human-development, McCarthy, Habermas, critical-theory, High}
}

@book{bailey2014deprovincializing,
  author = {Bailey, Tom},
  title = {Deprovincializing {Habermas}: Global Perspectives},
  year = {2014},
  publisher = {Routledge India},
  doi = {10.4324/9781315734194},
  abstract = {Foreword. Introduction Tom Bailey Part I. Democratizing 1. Back to Kant? The Democratic Deficits in Habermas' Global Constitutionalism Lars Rensmann 2. Democratizing International Law: A Republican Reading of Habermas' Cosmopolitan Project James Bohman 3. Feminist Solidarity in India: Communitarian Challenges and Postnational Prospects Kanchana Mahadevan 4. Deliberation without Democracy? Reflections on Habermas, Mini-publics and China William Smith Part II. Decolonizing 5. Defending Habermas against Eurocentrism: Latin America and Mignolo's Decolonial Challenge Raymond Morrow 6. Care, Power and Deconstructive Postcolonialism: Reformulating the Habermasian Response Richard Ganis 7. From Communicative Modernity to Modernities in Tension John Rundell Part III. Desecularizing 8. What is Living and What is Dead in Habermas' Secularization Hypothesis? Kevin W. Gray 9. Reason and Li Xing: A Chinese Solution to Habermas' Problem of Moral Motivation Tong Shijun 10. Radicalizing the Post-secular Thesis, Provincializing Habermas Peter Losonczi. About the Editor. Notes on Contributors. Index},
