@article{pajnik2006feminist,
  author = {Pajnik, Mojca},
  title = {Feminist Reflections on {Habermas}'s Communicative Action: The Need for an Inclusive Political Theory},
  journal = {European Journal of Social Theory},
  year = {2006},
  volume = {9},
  number = {3},
  pages = {385--404},
  doi = {10.1177/1368431006065719},
  note = {
  CORE ARGUMENT: Pajnik argues that Habermas's theory of communicative action, despite its emancipatory aspirations, remains inadequate for feminist political theory because it privileges a particular model of rationality and public discourse that excludes affective, embodied, and care-oriented modes of communication. She examines how the gender-blindness of the theory's formal pragmatics and its procedural model of discourse fails to account for the gendered structures of the lifeworld and the systemic exclusion of women from the public sphere's defining practices.

  RELEVANCE: This article provides a focused philosophical examination of the communicative action framework's feminist limitations, engaging both the early theory of communicative rationality and the later political theory. It articulates the gap between Habermas's formal universalism and the embodied, relational dimensions of communication in a way that directly parallels postcolonial critiques of the theory's Western rationalism.

  POSITION: Feminist critique of communicative rationality, arguing for a more inclusive political theory.
  },
  keywords = {Pajnik, communicative-action, feminist-critique, rationality, inclusive-theory, Medium},
  abstract = {This article explores critiques and reformulations of Habermas's concept of communicative action as presented by feminist authors. Numerous articles considering communicative action as developed by Habermas from a feminist perspective have been published, but no systematic analysis of these arguments exists. This article aims to fill the gap by providing an examination of various readings of communicative action from a feminist standpoint. If, on one hand, the article collects the dispersed feminist critique of communicative action and offers insight into feminist argumentation, its aim is, on the other hand, to reflect the critique itself. Therefore, attention is devoted both to feminist readings of communicative action, as well as to the potential shortcomings of these readings that are detected by a closer examination of Habermas's own works. The article's aim is also to show how feminist critics, in their interpretations and reformulations of communicative action, focus on an explication of the inclusive elements of communicative action.},
  abstract_source = {openalex},
}

@article{aubert2020social,
  author = {Aubert, Isabelle},
  title = {Social Inclusion, a Challenge for Deliberative Democracy? {Some} Reflections on {Habermas}'s Political Theory},
  journal = {European Journal of Social Theory},
  year = {2020},
  volume = {24},
  number = {4},
  pages = {448--466},
  doi = {10.1177/1368431020983781},
  note = {
  CORE ARGUMENT: Aubert examines the challenge that social inclusion poses for Habermas's theory of deliberative democracy, surveying critiques from Negt and Kluge, Fraser, Honneth, and Young. She argues that Habermas's account of the political public sphere contains internal resources for responding to these critiques --- particularly his treatment of the gap between religious and post-metaphysical worldviews and his concept of communicative power --- that his critics have underestimated. The article offers a partial defense of Habermas while acknowledging the force of Fraser's and Young's critiques regarding the paradoxically excluding effects of impartiality norms.

  RELEVANCE: This article provides the most systematic recent survey of inclusion critiques of Habermasian deliberative democracy and assesses the extent to which his framework can respond to feminist, Marxist, and recognition-based critiques. It is useful for mapping the overall landscape of exclusion critiques and for identifying what remains contested or underdeveloped in Habermas's own responses.

  POSITION: Partially reconstructive reading of Habermas, acknowledging feminist and Marxist critiques while defending internal resources.
  },
  keywords = {Aubert, deliberative-democracy, inclusion, Fraser, Young, Honneth, social-inclusion, Medium},
  abstract = {This article explains how the issue of inclusion is central to Habermas's theory of democracy and how it is deeply rooted in his conception of a political public sphere. After recalling Habermas's views on the public sphere, I present and discuss various objections raised by other critical theorists: Oskar Negt and Alexander Kluge, Nancy Fraser, Axel Honneth and Iris Marion Young. These criticisms insist on the paradoxically excluding effects of a conception of democracy that promotes civic participation in the public debate. Negt, Kluge and Fraser develop a Marxist line of analysis that question who can participate in the public sphere. Honneth and Young criticize in various ways the excluding effect of argumentation: are unargumentative speeches excluded from the public debate? I show how Habermas's model can provide some responses to these various objections by drawing inspiration from his treatment of the gap between religious and post-metaphysical world views.},
  abstract_source = {s2},
}

@incollection{mansbridge2017longlife,
