@article{children2021home,
  author    = {Clark, Alison and others},
  title     = {Children's Exploration of the Concepts of Home and Belonging: Capturing Views from Five European Countries},
  journal   = {Children's Geographies},
  volume    = {20},
  number    = {4},
  pages     = {429--441},
  year      = {2022},
  doi       = {10.1016/j.childyouth.2021.106064},
  note      = {Research shows even youngest children able to describe ideas using metaphors and abstract concepts, and they agreed that home was more than just building. Identified six interrelated aspects of how people conceptualize home and belonging: Spatiality, Materiality, Multiplicity, Social Relations, Affect, and Dislocation. Important empirical work on conceptualization of home.}
