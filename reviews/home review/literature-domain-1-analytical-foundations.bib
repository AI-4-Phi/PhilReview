@article{jenkins2022what,
  author    = {Jenkins, David and Brownlee, Kimberley},
  title     = {What a Home Does},
  journal   = {Law and Philosophy},
  volume    = {41},
  number    = {4},
  pages     = {441--468},
  year      = {2022},
  note      = {Develops ladder of home-related concepts to distinguish home from house and shelter. Starting with temporary shelter, moving to persistent shelter and housing, and finally to rich notion of home that focuses on meeting social needs including belonging and meaningful control over social environment. Concept-ladder enables distinguishing shelterless from sheltered; unhoused from housed; and unhomed from homed. Argues analytic philosophy has largely neglected homelessness and social functions of home. Social conception of home vs. legal conception. Essential for conceptual analysis of home.}
}

@book{fox2016home,
  author    = {Fox, Michael Allen},
  title     = {Home: A Very Short Introduction},
  series    = {Very Short Introductions},
  publisher = {Oxford University Press},
  year      = {2016},
  isbn      = {9780198723165},
  note      = {Professor Emeritus of Philosophy at Queen's University. Accessible philosophical treatment of concept of home. While home might seem like readily understood concept and source of universally positive feelings, on closer investigation, neither assumption is true. Concept of home is constructed differently by different languages; dwellings are built and lived in very differently by diverse groups; and many individuals have negative or mixed emotions regarding their experiences of home life. Home has always been gathering place, shelter, and sanctuary, providing escape from busyness and intrusiveness of world. Home has been treasured and longed for as anchor of our existence.}
}

@book{coccia2024philosophy,
  author    = {Coccia, Emanuele},
  title     = {Philosophy of the Home: Domestic Space and Happiness},
  translator = {Dixon, Richard},
  publisher = {Penguin Random House UK},
  year      = {2024},
  isbn      = {9781802061017},
  note      = {Recent philosophical work examining home as space for human realisation and existential appreciation. Examines different aspects of home including spaces, objects, corridors and pets. Challenges idea that philosophical thinking happens in city. House is not merely physical space but moral phenomenon that shapes our relationships and experiences. Explores transformative power of domestic spaces, particularly kitchen, as sites of personal and cosmic metamorphosis. Reviewed in Housing Studies 2024. Research into housing has historically neglected philosophy but this is changing with dedicated scholarship.}
}

@incollection{depaul2001privacy,
  author    = {DeCew, Judith Wagner},
  title     = {Privacy},
  booktitle = {The Stanford Encyclopedia of Philosophy},
  editor    = {Zalta, Edward N.},
  publisher = {Metaphysics Research Lab, Stanford University},
  year      = {2025},
  note      = {Major encyclopedia entry on privacy. Aristotle's distinction between public sphere of politics (polis) and private or domestic sphere of family (oikos) is starting point for philosophical discussions of privacy. Although there has been persistent concern for domestic privacy throughout history and across many cultures, in philosophical theory there remains research-gap between Aristotle's theory and classical liberal theory. No single definition, analysis or meaning of term privacy in ordinary language or in philosophical, political and legal discourse. Grounded in psychological and social constructs, need for privacy is reflected in human socio-spatial behaviour and in our own home. Essential for understanding home as private sphere.}
}

@article{graham2015home,
