@incollection{waldron2016property,
  author    = {Waldron, Jeremy},
  title     = {Property and Ownership},
  booktitle = {The Stanford Encyclopedia of Philosophy},
  editor    = {Zalta, Edward N.},
  publisher = {Metaphysics Research Lab, Stanford University},
  year      = {2016},
  note      = {Major encyclopedia entry on property by leading philosopher. Discusses property as general term for rules governing access to and control of land and material resources. Private property refers to system that allocates particular objects to particular individuals to use and manage as they please, to exclusion of others. Discusses owner's power to license others to use property (lend automobile, rent house, grant right of way over land). Part of logic of private property that no-one has responsibility to concern themselves with big picture, so far as distribution of resources is concerned. Essential theoretical background for understanding property rights vs. housing access debates.}
}

@book{nussbaum2000women,
  author    = {Nussbaum, Martha C.},
  title     = {Women and Human Development: The Capabilities Approach},
  publisher = {Cambridge University Press},
  year      = {2000},
  isbn      = {9780521003858},
  note      = {Canonical work developing capabilities approach with list of ten central capabilities to define threshold level for minimally flourishing life. Ability to access adequate shelter is included as component in her list. Nussbaum's basic capabilities can formulate comprehensive claims, such as right to minimum amount of living space in neighbourhood with access to green spaces and with little crime, so capabilities such as play, bodily integrity, or senses, imagination, and thought can develop and flourish. Housing functions as means for furtherance of at least three capabilities: bodily health, bodily integrity, and control over one's environment. Foundational for capabilities approaches to housing justice.}
}

