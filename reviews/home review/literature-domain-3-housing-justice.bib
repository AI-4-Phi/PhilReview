@article{erck2024housing,
  author    = {Erck, Susan},
  title     = {Housing Limitarianism: What's Wrong with Owning Excess Housing},
  journal   = {PhilArchive},
  year      = {2024},
  url       = {https://philarchive.org/archive/ERCHLW},
  note      = {Develops moral and political doctrine of housing limitarianism, building on Ingrid Robeyns' limitarianism framework. Examines what is morally wrong with extreme wealth in housing. Limitarianism is not argument for equality of outcome, but for confronting upper tail of distribution of housing wealth. Housing limitarianism asserts it is wrong to possess excess housing. Applies under conditions: existence of material housing deprivation, and use of residential real estate as profit generating commodity that undermines fair and effective fulfillment of housing needs. Urgent needs argument: having too much housing might be impermissible in society where others do not have enough (e.g., holiday homes alongside homelessness).}
}

