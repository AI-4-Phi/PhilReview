@article{beckstein2016concept,
  author = {Beckstein, Martin},
  title = {The concept of a living tradition},
  journal = {European Journal of Social Theory},
  year = {2016},
  volume = {20},
  number = {4},
  pages = {491--510},
  doi = {10.1177/1368431016668185},
  note = {
  CORE ARGUMENT: Beckstein provides the most systematic contemporary analysis of tradition,
  arguing that traditions are socially valuable precisely because they are "living"—capable
  of authentic continuation through evolution. He distinguishes traditions from mere customs
  by their claim to continuity with the past and their requirement of explicit transmission.
  The central paradox: traditions must change to remain authentic, yet change threatens
  their identity as the "same" tradition. Beckstein resolves this through criteria for
  authentic continuation: changes must be comprehensible as developments of the tradition's
  core commitments rather than breaks from them.

  RELEVANCE: This paper is foundational for the research project because it offers the most
  detailed contemporary conceptual analysis of tradition. Beckstein's distinction between
  tradition and custom/convention clarifies what conceptual work "tradition" does that other
  concepts cannot. His analysis of "living traditions" directly addresses how traditions can
  be both conservative (maintaining continuity) and dynamic (evolving), a tension central to
  understanding tradition's role in political philosophy. The paper also bridges analytic and
  continental approaches to tradition.

  POSITION: Analytic conceptual analysis with hermeneutic influences. Beckstein argues for
  tradition as a distinct social form characterized by claimed continuity, explicit transmission,
  and capacity for authentic development.
  },
  keywords = {tradition-concept, conceptual-analysis, living-tradition, High}
}

@article{jacobs2007edward,
