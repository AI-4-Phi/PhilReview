    {
      "paperId": "c9b14525b54078ee0167420d2b5940c8e69cf33a",
      "title": "LIBERALIZMO IR DEMOKRATIJOS SANTYKIS POLITIN\u0116S FILOSOFIJOS PO\u017dI\u016aRIU",
