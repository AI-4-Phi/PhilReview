    {
      "openalex_id": "W2598098786",
      "doi": "10.3389/fsoc.2017.00003",
      "title": "Modernity and the Idea of Progress",
      "authors": [
        {
          "name": "Angelos Mouzakitis",
          "openalex_id": "A5002778904",
