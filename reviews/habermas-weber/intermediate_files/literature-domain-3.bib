@article{mendieta2018axial,
  author = {Mendieta, Eduardo},
  title = {The Axial Age, Social Evolution, and Postsecular Consciousness},
  journal = {Critical Research on Religion},
  year = {2018},
  volume = {6},
  number = {3},
  pages = {289--308},
  doi = {10.1177/2050303218800379},
  abstract = {This article focuses on Karl Jaspers's notion of the Axial Age, some of its critical appropriation, and how in particular Habermas has returned to this idea, after several critical engagements with Jaspers's work through his long scholarly productivity. The article, however, centers on Habermas's selective and critical use of Jaspers's notion in his own latest and extensive engagement with what he calls "a genealogy of postmetaphysical thinking." The goal of the article is to identify the ways in which Habermas is refurbishing Jaspers's generative concept, but at the same time, how his work on postsecular consciousness opens itself to some liabilities by not taking enough distance from the concept.},
  abstract_source = {s2},
  note = {
  CORE ARGUMENT: Mendieta traces Habermas's engagement with Karl Jaspers's
  "Axial Age" hypothesis -- the idea that a fundamental transformation of
  human consciousness occurred simultaneously across civilizations around
  800-200 BCE -- and argues that Habermas increasingly uses the Axial Age
  concept as a quasi-historical anchor for his theory of postmetaphysical
  thinking and postsecular consciousness. This brings Habermas into dialogue
  with Weber's own world-religions project.

  RELEVANCE: The Axial Age concept is the hinge between Weber's comparative
  historical sociology of world religions and Habermas's reconstructive
  genealogy of rationality. Mendieta's analysis shows how Habermas uses the
  world-religions framework in ways that both appropriate and depart from
  Weber's approach, addressing the project's question about Habermas's use of
  Weber's comparative-historical sociology.

  POSITION: Presents Habermas's engagement with the Axial Age concept as a
  substantive contribution to comparative historical sociology of religion that
  exceeds narrow Western-centric categories.
  },
  keywords = {Habermas, axial-age, world-religions, social-evolution, postsecular, Weber, Medium}
}

@article{oh2023developmental,
  author = {Oh, Keunchang},
  title = {A Developmental Logic: {Habermas's} Theory of Social Evolution},
  journal = {Theoria},
  year = {2023},
  volume = {90},
  number = {1},
  pages = {81--97},
  doi = {10.1111/theo.12509},
  abstract = {In the paper, I first consider how his theory of social norms is connected to his theory of social evolution by examining the importance of learning in his theory of both social norms and social evolution. Then I turn to David Owen and Amy Allen's critiques of Juergen Habermas. My aim is to develop their critique of Habermas by elucidating an important but neglected distinction between the developmental logic and the developmental dynamics in Habermas's theory of social evolution. Drawing on this distinction, I claim that Habermas's theory is problematic in that he underestimates the importance of the developmental dynamics. By introducing the distinction between individual learning and social learning, I also question his account of progress as accumulative experience of learning. This is because, unlike cumulative culture at the level of phylogenesis, individuals ontogenetically experience a kind of non-cumulative social learning. The problem is that Habermas conceives the learning process too narrowly such that learning does not guarantee social evolution.},
  abstract_source = {s2},
  note = {
  CORE ARGUMENT: Oh argues that Habermas's theory of social evolution is
  structurally committed to a "developmental logic" in which social formations
  are ranked by their degree of communicative rationalization. However,
  Habermas's conception of learning is too narrowly individualist: unlike
  cumulative culture at the phylogenetic level, individual ontogenetic learning
  is non-cumulative, so the ontogenetic analogy breaks down. Learning processes
  do not automatically translate into social evolution.

  RELEVANCE: This recent paper subjects the core mechanism of Habermas's
  quasi-evolutionary account -- the analogy between individual moral development
  and collective social learning -- to technical scrutiny, with direct bearing
  on whether Habermas's philosophy of history represents an advance over or
  departure from Weberian developmental history.

  POSITION: Internal technical critique: accepts Habermas's framework but
  argues the learning-process mechanism is too narrow to sustain the
  evolutionary claims.
  },
  keywords = {Habermas, social-evolution, developmental-logic, ontogenetic-analogy, learning-processes, Medium}
}

@article{mejia2022social,
  author = {Mej{\'i}a Fern{\'a}ndez, Ricardo and Romero, Javier},
  title = {Social Evolution in {J\"{u}rgen Habermas}: Towards a Weak Anthropological Naturalism between {Kant} and {Darwin}},
  journal = {Theoria},
  year = {2022},
  volume = {88},
  number = {3},
  pages = {607--628},
  doi = {10.1111/theo.12383},
  abstract = {Issues concerning naturalism have increasingly become the subject of philosophical reflections involving ontological, epistemological, and even ethics affairs. The most popular topic for contemporary philosophy has been the relationship between ontological results of Darwinism and epistemology. Despite the varied circumstances of its establishment, naturalism almost always produces recommendations that reflect a worldview much weaker (as in the case of Habermas) than the strong one more common among scientism. The aim of this paper is to elucidate some of distinctive social features of Habermas's conception of the human being and its implications in the Theory of Communicative Action (1982). Therefore, it is shown that his anthropology takes a naturalistic and Darwinist perspective in the weak naturalism perspective.},
  note = {
  CORE ARGUMENT: Mejia Fernandez and Romero argue that Habermas's theory of
  social evolution rests on a "weak anthropological naturalism" that draws on
  Darwin without reducing human social life to biological evolution. Habermas
  occupies a position between Kantian transcendentalism and Darwinian
  naturalism: he accepts human evolutionary origins while insisting that
  communicative rationality cannot be reduced to adaptation or survival.

  RELEVANCE: This provides the anthropological foundations of Habermas's social
  evolution theory, showing why Habermas's theory of historical development
  takes the specific form it does -- neither Weberian historicism nor crude
  biological evolutionism, but a reconstructive account grounded in species-
  level communicative competence.

  POSITION: Defends Habermas's weak naturalism as a coherent middle position
  between scientism and strong normativism.
  },
  keywords = {Habermas, social-evolution, naturalism, Darwin, anthropology, developmental-history, Medium}
}

@article{habermas1975reconstruction,
  author = {Habermas, J{\"u}rgen},
