@article{delanty1997habermas,
  author = {Delanty, Gerard},
  title = {Habermas and Occidental Rationalism: The Politics of Identity, Social Learning, and the Cultural Limits of Moral Universalism},
  journal = {Sociological Theory},
  year = {1997},
  volume = {15},
  number = {1},
  pages = {30--59},
  doi = {10.1111/0735-2751.00022},
  abstract = {While Habermas's theory of communicative action is deeply critical of all kinds of ethnocentrism, proposing a discursive concept of universal morality which transcends culture, a residual Eurocentrism still pervades it. Habermas's theory rests on a notion of modernity which is tied to Occidental rationalism, and when viewed in the global context or in the context of deeply divided societies it is problematic. The theory fails to grasp that universal morality can be articulated in more than one cultural form and in more than one logic of development. However, his theory can be defended against its Eurocentric bias if it shifts its emphasis from a de-contexualized and transcendental critique of communication rooted in Occidental rationalism to a cosmopolitan model of contemporary cultural transformation. Crucial to that task is a weaker notion of rationality which recognizes that the problem of universality is also a cognitive cultural problem and not just a normative one. Bringing culture and identity to the foreground will involve making room for a level of discourse focused less on consensual agreement than on cultural understanding},
  abstract_source = {core},
  note = {
  CORE ARGUMENT: Delanty argues that Habermas's theory of social learning and
  communicative rationality remains embedded in "Occidental rationalism" --
  that is, it reproduces the Western-centric developmental logic of Weber's
  own rationalization thesis even while claiming universal validity. Habermas's
  attempt to ground normative universalism in communicative competence cannot
  escape its cultural limits; the politics of identity and recognition are not
  adequately handled by his quasi-evolutionary framework.

  RELEVANCE: Directly addresses the domain's central question about
  Eurocentrism in Habermas: does his quasi-evolutionary account of social
  learning mark a genuine advance over or merely recapitulate Weberian
  developmental Eurocentrism? Delanty's critique from within the broadly
  Habermasian tradition is particularly penetrating.

  POSITION: Critical reconstructionist -- accepts Habermas's communicative
  turn but challenges his developmental universalism as insufficiently
  differentiated from the Occidental rationalism he inherits from Weber.
  },
  keywords = {Habermas, Weber, Eurocentrism, social-learning, moral-universalism, occidental-rationalism, High}
}

@book{schluchter1981rise,
  author = {Schluchter, Wolfgang},
  title = {The Rise of Western Rationalism: {Max Weber's} Developmental History},
  year = {1981},
  publisher = {University of California Press},
  note = {
  CORE ARGUMENT: Schluchter offers a systematic reconstruction of Weber's
  developmental history as a coherent theoretical project, arguing that Weber's
  comparative historical sociology of rationalization is not an ad hoc
  collection of studies but follows a unified developmental logic tracing the
  "disenchantment of the world" through world religions to modern institutional
  structures. Schluchter maps Weber's multi-dimensional rationalism and its
  internal tensions.

  RELEVANCE: This reconstruction of Weber's developmental history is the
  essential reference point for understanding what Habermas is appropriating
  and departing from in his quasi-evolutionary account of social learning.
  Habermas explicitly engages with Schluchter's reading of Weber in Theory of
  Communicative Action vol. I when formulating his own alternative.

  POSITION: Reconstructive rather than critical -- Schluchter presents the
  best version of Weber's developmental history, which then becomes the foil
  against which Habermas's quasi-evolutionary theory is measured.
  },
  keywords = {Weber, developmental-history, rationalization, world-religions, High, INCOMPLETE, no-abstract}
}

