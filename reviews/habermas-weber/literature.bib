  },
  keywords = {Weber-rationality, modernity, Habermas-debate, Schluchter, value-spheres, Medium}
}

@article{strydom1992ontogenetic,
  author = {Strydom, Piet},
  title = {The Ontogenetic Fallacy: The Immanent Critique of {H}abermas's Developmental Logical Theory of Evolution},
  journal = {Theory, Culture \& Society},
  year = {1992},
  volume = {9},
