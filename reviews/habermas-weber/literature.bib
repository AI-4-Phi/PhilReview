@article{habermas1973postscript,
  author = {Habermas, Juergen and Lenhardt, Christian},
  title = {A Postscript to Knowledge and Human Interests},
  journal = {Philosophy of the Social Sciences},
  year = {1973},
  volume = {3},
  number = {2},
  pages = {157--189},
  doi = {10.1177/004839317300300204},
  note = {
  CORE ARGUMENT: Habermas clarifies and partly revises his epistemological framework
  from Knowledge and Human Interests, distinguishing three knowledge-constitutive
  interests (technical, practical, emancipatory) and responding to critics who argued
  the framework confuses transcendental and empirical levels of analysis. He defends
  the view that the social sciences cannot be methodologically unified under a
  positivist model because interpretive (hermeneutic) and critical-reconstructive
  interests are irreducible to the technical interest in prediction and control.

  RELEVANCE: This methodological clarification directly bears on how Habermas
  positions himself relative to Weber: the practical knowledge-constitutive interest
  that grounds hermeneutic social science corresponds to Weber's Verstehen tradition,
  but Habermas argues that a further emancipatory interest, absent in Weber, is
  required for critical social theory. The paper reveals the normative stakes of
  Habermas's rejection of Weberian value-freedom.

  POSITION: Habermas's argument that social science is constitutively normative
  represents a direct challenge to Weber's Wertfreiheit postulate.
  },
  keywords = {knowledge-constitutive-interests, value-freedom, hermeneutics, methodology, High, INCOMPLETE, no-abstract}
}

@article{outhwaite2014reconstructive,
  author = {Outhwaite, William},
  title = {Reconstructive Science and Methodological Dualism in the Work of Juergen Habermas},
  journal = {Philosophical Inquiry},
  year = {2014},
  volume = {38},
  number = {1},
  pages = {2--18},
  doi = {10.5840/philinquiry2014381/21},
  note = {
  CORE ARGUMENT: Outhwaite argues that Habermas maintains a fundamental methodological
  dualism between empirical-analytic and interpretive approaches, while adding a third
  mode -- reconstructive science -- that aims to uncover the universal presuppositions
  of communicative competence. This third mode differs from both positivism and
  hermeneutics and constitutes Habermas's original methodological contribution beyond
  his Weberian inheritance.

  RELEVANCE: This is the most direct scholarly treatment of Habermas's reconstructive
  science as a methodological category and its relationship to the empirical/hermeneutic
  dualism that Weber navigated through ideal types. Outhwaite situates reconstructive
  science as Habermas's alternative to both Weberian causal adequacy and Gadamerian
  hermeneutics.

  POSITION: Represents the view that Habermas transforms rather than inherits Weber's
  methodology by introducing a reconstructive dimension absent in both positivism and
  hermeneutics.
  },
  keywords = {reconstructive-science, methodological-dualism, Habermas, Weber, High, INCOMPLETE, no-abstract}
}

@article{pedersen2008habermas,
  author = {Pedersen, Jorgen},
  title = {Habermas' Method: Rational Reconstruction},
  journal = {Philosophy of the Social Sciences},
  year = {2008},
  volume = {38},
  number = {4},
  pages = {457--485},
  doi = {10.1177/0048393108319024},
  abstract = {Given the prominent position Habermas' philosophy has gained, it is surprising that his method, rational reconstruction, has not caused more debate. This article clarifies what this method consists of, and shows how it is used in two of Habermas' research programs. The method is an interesting, but problematic way of confronting some of the basic epistemological questions in the social sciences. It represents an alternative to both the empirical-analytical and the hermeneutic tradition. On the basis of this methodology, Habermas' work is situated between the transcendental and the empirical approach. A fundamental problem is that it remains unclear how to test the hypothesis put forward through rational reconstruction.},
  abstract_source = {openalex},
  note = {
  CORE ARGUMENT: Pedersen offers a systematic account of rational reconstruction as
  Habermas's central methodological device, distinguishing it from both the
  empirical-analytic and hermeneutic traditions. He argues that rational reconstruction
  aims to make explicit the universal competences presupposed in communicative practice,
  operating neither inductively nor interpretively but in a mode analogous to Chomskian
  linguistics -- revealing the grammar of practical reason embedded in social action.
  Pedersen also identifies unresolved tensions in the method regarding its empirical
  testability and normative foundations.

  RELEVANCE: This paper directly addresses the key question of how Habermas's
  reconstructive science relates to Weberian interpretive sociology. By clarifying that
  rational reconstruction is an alternative to hermeneutics (not simply a refined
  version of it), Pedersen helps map the distance between Habermas and Weber's Verstehen
  approach. The methodological tensions identified are directly relevant to assessing
  Habermas's departure from Weberian value-freedom.

  POSITION: Defends the view that rational reconstruction constitutes a genuinely
  novel methodological mode, distinct from both positivism and hermeneutics, though
  problematic in its empirical grounding.
  },
  keywords = {rational-reconstruction, methodology, Habermas, social-science, High}
}

@article{kedar2007ideal,
  author = {Kedar, Asaf},
  title = {Ideal Types as Hermeneutic Concepts},
  journal = {Journal of the Philosophy of History},
  year = {2007},
  volume = {1},
  number = {3},
  pages = {318--345},
  doi = {10.1163/187226307x229380},
  abstract = {My paper sets out to demonstrate that Weber's ideal-typical theory of concept formation, subject to certain modifications, is compatible with the principles of philosophical hermeneutics and is therefore a valuable strategy of concept formation for interpretive historical inquiry. The essay begins with a brief recapitulation of the philosophical-hermeneutic approach to the human sciences. I then chart out the affinities as well as the discrepancies between philosophical hermeneutics and Weber's theory of the ideal type. Against this backdrop, I proceed to offer a number of correctives and additions to Weber's theory so as to tighten its fit with philosophical hermeneutics. First, I argue that the ideal type's proper logic of concept formation is a logic of significance rather than a logic of commonality. Second, I claim that the relationship between the various empirical cases to which a given ideal type is (or can be) applied is a Wittgensteinian relationship of family resemblance. Finally, I present two main kinds of epistemological functions that ideal types can fulfill within the framework of historical inquiry: argumentative and orientational-clarificatory.},
  abstract_source = {openalex},
  note = {
  CORE ARGUMENT: Kedar argues against the standard positivist reading of Weber's
  ideal types as purely heuristic tools for causal analysis, contending instead that
  ideal types are fundamentally hermeneutic concepts: they enable interpretive
  understanding of the meaning structures of social action by constructing one-sided
  accentuations of cultural phenomena. The ideal type's logic is one of significance
  (not commonality), and cases stand in a Wittgensteinian family-resemblance relation,
  not a classificatory one.

  RELEVANCE: This reinterpretation of Weber's ideal types as hermeneutic concepts
  has direct implications for the question of whether Habermas's reconstructive
  science extends or departs from Weber: if ideal types already have an interpretive
  dimension, Habermas's engagement with Weber's sociology may represent less of a
  break than typically supposed. Kedar's paper is directly relevant to assessing
  the methodological continuity thesis.

  POSITION: Defends the continuity thesis by showing that Weber's ideal-type method
  already incorporates the interpretive dimension that Habermas claims to introduce.
  },
  keywords = {ideal-types, hermeneutics, Weber, methodology, Medium}
}

@article{anicker2025hermeneutics,
  author = {Anicker, Fabian},
  title = {Between Hermeneutics and Systematicity: The Habermasian Method of Theorizing},
  journal = {Analyse \& Kritik},
  year = {2025},
  volume = {47},
  number = {1},
  pages = {161--178},
  doi = {10.1515/auk-2025-2006},
  abstract = {Juergen Habermas's work is analyzed as an outstanding combination of hermeneutic sensitivity to different theories and systematic theory integration. Habermas's theoretical method revolves around a problem-centered understanding of theory that interprets it as a response to specific problems. The methodological reconstruction of key texts shows that he used the distinction of theory and problem as an all-purpose device for interpretation, critique, and theory construction. This method is superior to other, more common ways of integrating theoretical plurality.},
  abstract_source = {s2},
  note = {
  CORE ARGUMENT: Anicker analyzes Habermas's theoretical practice as a distinctive
  combination of hermeneutic sensitivity -- careful reconstruction of existing theories
  as responses to specific problems -- with systematic integration of plural theoretical
  resources. He argues that Habermas's method organizes theoretical plurality through
  a problem-centered framework: theories are interpreted as solutions to definite
  problems, which allows their critical assessment and systematic integration without
  collapsing into eclecticism.

  RELEVANCE: This 2025 paper provides the most recent systematic account of Habermas's
  theoretical method and explicitly situates it between hermeneutics and systematic
  theory construction -- precisely the methodological space opened by Habermas's
  critique of both Weberian causal-adequate explanation and Gadamerian universal
  hermeneutics. The paper illuminates how Habermas's reading of Weber in the Theory
  of Communicative Action exemplifies his broader methodological practice.

  POSITION: Argues that Habermas's method represents a productive synthesis of
  hermeneutic interpretation and systematic integration, superior to more monistic
  methodological approaches.
  },
  keywords = {Habermas, methodology, hermeneutics, theory-construction, High}
}

@article{shahwirman2023inquiry,
  author = {Shahwirman, Tizar},
  title = {A Critical Inquiry into Juergen Habermas' Hermeneutical Reflection as a Methodology of Social Science},
  journal = {DISKURSUS - JURNAL FILSAFAT DAN TEOLOGI STF DRIYARKARA},
  year = {2023},
  volume = {19},
  number = {2},
  pages = {257--291},
  doi = {10.36383/diskursus.v19i2.443},
  abstract = {This paper aims to examine and evaluate Habermas' thoughts on hermeneutical reflection as a methodology of social science based on his work titled Zur Logik der Sozialwissenschaften (On The Logic of The Social Sciences). By starting from a theory of action approach focusing on the process of inquiring and understanding intentional action, Habermas developed a hermeneutical reflection approach emphasizing the importance of communicative experience between the researcher and the subject examined. This approach has emancipatory power because it encourages researchers to thoroughly identify the ideological elements of social reality researched. Apart from all the advantages of Habermas' methodological thought, his thinking should be evaluated critically because there are problematic aspects when viewed through the lens of ontology, methodology/method, and axiology.},
  abstract_source = {s2},
  note = {
  CORE ARGUMENT: Drawing on Habermas's Zur Logik der Sozialwissenschaften (On the Logic
  of the Social Sciences), Shahwirman examines Habermas's hermeneutical reflection as
  a methodology of social science. He argues that Habermas's approach begins from an
  action-theoretic framework focusing on intentional action, develops a hermeneutical
  reflection method emphasizing communicative experience between researcher and subject,
  and claims emancipatory power through its capacity to identify ideological distortions.
  He also identifies ontological, methodological, and axiological tensions in Habermas's
  position.

  RELEVANCE: This paper directly examines the primary text (On the Logic of the Social
  Sciences) that is most immediately relevant to the Habermas-Weber methodological
  question, analyzing how Habermas's hermeneutical reflection method relates to and
  diverges from the Weberian interpretive tradition. The critical assessment of tensions
  in Habermas's methodology is useful for evaluating his engagement with value-freedom.

  POSITION: Accepts Habermas's hermeneutical turn beyond positivism while identifying
  unresolved tensions in his departure from Weberian value-freedom.
  },
  keywords = {Habermas, hermeneutics, social-science-methodology, On-Logic-Social-Sciences, Medium}
}

@article{aronovitch2011interpreting,
  author = {Aronovitch, Hilliard},
  title = {Interpreting Weber's Ideal-Types},
  journal = {Philosophy of the Social Sciences},
  year = {2011},
  volume = {42},
  number = {3},
  pages = {356--369},
  doi = {10.1177/0048393111408779},
  abstract = {Weber's notion of ideal-types has most frequently been rejected as incoherent or overly abstract. This article maintains that it insightfully addresses explanatory issues in social science by encompassing the agents' subjective understanding and the need for theorists to comprehend, explain, and evaluate it. As such, ideal-types are not versions of established models in natural science or economics. Further keys are seeing ideal-types as blending interpretive understanding and causal explanation but not thereby causal generalizations, and rational appraisals as consistent with value pluralism.},
  abstract_source = {openalex},
  note = {
  CORE ARGUMENT: Aronovitch defends Weber's ideal-type method against the charge that
  it is incoherent or overly abstract, arguing that ideal types address genuine
  explanatory challenges in social science by blending interpretive understanding
  with causal explanation without reducing either to the other. Key to his argument
  is showing that ideal types are compatible with value pluralism while enabling
  rational appraisals of social phenomena.

  RELEVANCE: By defending Weber's ideal-type method as a coherent combination of
  Verstehen and causal explanation, this paper provides the comparison point against
  which Habermas's reconstructive science can be assessed. The question of whether
  Habermas's method advances beyond or merely transforms Weber's solution to the
  interpretation/explanation problem is directly relevant to the project.

  POSITION: Defends Weber's ideal-type methodology as a viable via media between
  pure hermeneutics and causal explanation, challenging the view that Habermas's
  reconstructive turn was necessary.
  },
  keywords = {ideal-types, Verstehen, Weber, social-science, Medium}
}

@article{wilson1986critical,
  author = {Wilson, H. T.},
  title = {Critical Theory's Critique of Social Science: Episodes in a Changing Problematic from Adorno to Habermas, Part I},
  journal = {History of European Ideas},
  year = {1986},
  volume = {7},
  number = {2},
  pages = {127--147},
  doi = {10.1016/0191-6599(86)90068-9},
  note = {
  CORE ARGUMENT: Wilson traces the trajectory of critical theory's engagement with
  social science from Adorno through Habermas, arguing that the Frankfurt School's
  critique of positivism evolved from a primarily negative (ideological critique)
  to a more constructive methodological program in Habermas's work. He shows how
  Habermas's attempt to found a non-positivist social science forced him to engage
  seriously with the Weberian tradition of interpretive sociology.

  RELEVANCE: This historical study maps the intellectual context in which Habermas's
  methodological innovations occurred, situating the Habermas-Weber relationship within
  the broader Frankfurt School inheritance and its critique of positivism. Relevant
  for understanding why Habermas's engagement with Weber was not simply reception
  but transformation oriented by the emancipatory interests of critical theory.

  POSITION: Situates Habermas's methodological innovations within the trajectory from
  negative to positive critical theory, showing how the engagement with Weber was
  motivated by the need for a reconstructive (not merely critical) social science.
  },
  keywords = {critical-theory, social-science, Frankfurt-School, Habermas, Weber, Medium}
}

@article{baynes1989rational,
  author = {Baynes, Kenneth},
  title = {Rational Reconstruction and Social Criticism: Habermas's Model of Interpretive Social Science},
  journal = {The Philosophical Forum},
  year = {1989},
  volume = {21},
  pages = {122--145},
  note = {
  CORE ARGUMENT: Baynes presents Habermas's approach as a model of interpretive social
  science that integrates rational reconstruction -- the formal explication of universal
  competences presupposed in communicative action -- with social criticism. He argues
  that this model preserves interpretive understanding of meaning while adding a
  normative-reconstructive dimension that moves beyond the descriptive constraints
  of Weberian Verstehen.

  RELEVANCE: This paper directly addresses the question of how Habermas's reconstructive
  science relates to interpretive sociology, making it essential for understanding the
  methodological distance between Habermas and Weber. Baynes's framing of reconstruction
  as simultaneously interpretive and critical situates the Habermas-Weber relationship
  precisely in terms of the project's concerns.

  POSITION: Argues that Habermas's model represents a productive synthesis of
  interpretation and critique that Weber's value-freedom principle explicitly prohibited.
  },
  keywords = {rational-reconstruction, social-criticism, Habermas, interpretive-sociology, High, INCOMPLETE, no-abstract}
}

@article{shamsi2024verstehen,
  author = {Shamsi, Ali},
  title = {Interpretive Methodology and Its Relationship with Verstehen in Max Weber's Philosophy of Social Sciences Methodology},
  journal = {TMP Universal Journal of Research and Review Archives},
  year = {2024},
  volume = {3},
  number = {4},
  doi = {10.69557/ujrra.v3i4.112},
  abstract = {The key role and clarifying function of Verstehen in Weber's interpretive methodology, as one of the important and illuminating tools, is used by scientists to properly understand social science phenomena. Considering Weber's interpretive approach based on individualistic interpretation of actors' actions, we find that Verstehen, in Weber's view, serves as a tool for social scientists to uncover the causes behind actors' intentional actions. Understanding actors' intentions, influenced by Weber's interpretive methodological approach, employs all its effort in explaining social science phenomena to achieve objectivity. In this research, we have attempted to address the meaning and importance of Verstehen's role, stemming from Weber's and his predecessors' interpretive perspective, as a tool for interpreting social science phenomena. Considering Weber's project aimed at achieving objectivity in social sciences, it should be said that Verstehen, like ideal types and other components of Weber's methodological system, are pieces meant to be initiated and employed by scientists to attain objectivity in social and cultural sciences.},
  abstract_source = {s2},
  note = {
  CORE ARGUMENT: Shamsi argues that Verstehen functions in Weber's methodology not as
  an end in itself but as a tool for achieving objectivity in social science, working
  alongside ideal types and other components to uncover the causal-intentional
  structures behind social action. The paper situates Verstehen within Weber's broader
  project of combining interpretive understanding with causal explanation through
  methodological individualism.

  RELEVANCE: Provides a detailed treatment of Weber's Verstehen methodology as the
  comparison point for assessing how Habermas transforms or extends it. The emphasis
  on Verstehen as a tool for objectivity is particularly relevant to contrasting with
  Habermas's claim that interpretive understanding is irreducibly normative.

  POSITION: Defends a reconstructed Weberian picture in which Verstehen serves
  explanatory rather than merely descriptive purposes, complicating the standard
  contrast with Habermasian hermeneutics.
  },
  keywords = {Verstehen, Weber, methodology, interpretive-sociology, Medium}
}

@book{habermas1984tca,
  author = {Habermas, Juergen},
  title = {The Theory of Communicative Action, Volume 1: Reason and the Rationalization of Society},
  publisher = {Beacon Press},
  year = {1984},
  note = {
  CORE ARGUMENT: In the first volume of this major work, Habermas develops his theory
  of communicative rationality as an alternative to Weber's concept of purposive
  rationality (Zweckrationalitaet). He engages in extended critique of Weber's
  ideal-typical analysis of Western rationalization, arguing that Weber's action-theoretic
  framework -- limited to purposive and value-rational action -- cannot capture the
  communicative dimension of social rationalization. Habermas reconstructs Weber's
  diagnosis of modernity (disenchantment, formal rationality, bureaucratization) and
  argues that its pathological character is better explained by the colonization of the
  communicatively-structured lifeworld by systemic imperatives.

  RELEVANCE: This is Habermas's most sustained engagement with Weber's sociology in
  his mature work. The critique of Weber's action-theoretic framework directly motivates
  Habermas's communicative turn and his development of rational reconstruction as an
  alternative to Weber's causal-adequate ideal-type analysis. Crucially, the introductory
  chapters on the methodology of Verstehen and the inseparability of interpretation from
  critique in social inquiry bear directly on the project's concerns about Weber's
  methodological legacy.

  POSITION: Habermas accepts Weber's diagnosis of modernity as rationalization while
  arguing that its methodological framework -- ideal types grounded in purposive
  rationality -- is inadequate to capture communicative rationalization.
  },
  keywords = {Weber, rationalization, Habermas, communicative-action, methodology, High}
}

@book{hollis1982rationality,
  author = {Hollis, Martin and Lukes, Steven},
  title = {Rationality and Relativism},
  publisher = {MIT Press},
  year = {1982},
  note = {
  CORE ARGUMENT: This edited collection brings together major contributions to the
  debate over rationality and relativism in the social sciences, with essays by Hollis,
  Lukes, and others engaging the central methodological questions about whether social
  inquiry must presuppose standards of rationality, and whether these standards are
  universal or culture-relative. The collection situates the Verstehen tradition in
  relation to broader debates about interpretation and explanation in social science.

  RELEVANCE: The rationality presuppositions debated in this volume are directly
  relevant to assessing Habermas's claim that rational reconstruction uncovers
  universal presuppositions of communicative action. Habermas's position -- that
  interpreting social action already involves appeal to universal validity claims --
  is precisely the kind of presupposition that the Hollis-Lukes volume examines.

  POSITION: The collection as a whole takes a broadly rationalist position (interpretation
  requires minimal rationality assumptions) that aligns with Habermas against pure
  hermeneutic relativism, while remaining divided on whether such rationality is
  universal or contextually constrained.
  },
  keywords = {rationality, relativism, social-science, Verstehen, Low, INCOMPLETE, no-abstract}
}

@book{schecter2010critique,
  author = {Schecter, Darrow},
  title = {The Critique of Instrumental Reason from Weber to Habermas},
  year = {2010},
  publisher = {Bloomsbury Academic},
  doi = {10.5040/9781501301759},
  note = {
  CORE ARGUMENT: Schecter traces the critique of instrumental reason from Weber
  through the Frankfurt School to Habermas, arguing that Habermas's communicative
  reformulation of critical theory represents both a genuine advance over Weber's
  pessimism and a significant accommodation to liberal institutions. Schecter is
  critical of Habermas for domesticating the radical edge of the instrumental reason
  critique by anchoring it in discourse ethics and proceduralism, which he argues
  underestimates the structural roots of instrumental rationality.

  RELEVANCE: Provides a diachronic account of the Weber-to-Habermas line of critique
  and explicitly evaluates Habermas's departure from Weber as simultaneously necessary
  and politically insufficient. Useful for understanding the debates about whether
  Habermas's "communicative turn" adequately addresses the depth of Weber's diagnosis.

  POSITION: Critical-theoretical perspective that finds Habermas's departure from
  Weber necessary but politically limited.
  },
  keywords = {instrumental-reason, Frankfurt-School, communicative-rationality, Weber-critique, High}
}

@article{ingram1991aesthetics,
  author = {Ingram, David},
  title = {Habermas on Aesthetics and Rationality: Completing the Project of {E}nlightenment},
  journal = {New German Critique},
  year = {1991},
  number = {53},
  pages = {67--103},
  doi = {10.2307/488245},
  note = {
  CORE ARGUMENT: Ingram argues that Habermas's theory of communicative reason remains
  incomplete because it insufficiently integrates the aesthetic-expressive dimension
  of rationality. By treating aesthetic validity claims as less central than cognitive
  and moral-practical ones, Habermas repeats — in modified form — Weber's tendency to
  subordinate cultural rationalization to formal rationality. The paper engages with
  the specifically Weberian background of Habermas's account of value-sphere
  differentiation and the "paradise lost" diagnosis of modernity.

  RELEVANCE: Directly addresses the question of what Habermas's critique of Weber's
  "one-sidedness" achieves and what it leaves undone, specifically with respect to
  the cultural-aesthetic dimensions of rationalization that Weber emphasized (the
  autonomy of the aesthetic sphere, the "polytheism of value orders"). Useful for the
  research question about whether Habermas adequately handles Weber's tragic dimension.

  POSITION: Extension of the Habermas-Weber debate into the question of aesthetic
  rationality and the limits of the communicative paradigm.
  },
  keywords = {Habermas-Weber, aesthetic-rationality, value-spheres, Enlightenment, High}
}

@article{kalberg1980types,
  author = {Kalberg, Stephen},
  title = {Max {W}eber's Types of Rationality: Cornerstones for the Analysis of Rationalization Processes in History},
  journal = {American Journal of Sociology},
  year = {1980},
  volume = {85},
  number = {5},
  pages = {1145--1179},
  doi = {10.1086/227128},
  note = {
  CORE ARGUMENT: Kalberg identifies four types of rationality in Weber (practical,
  theoretical, substantive, and formal) and argues that sociological analysis requires
  distinguishing all four rather than collapsing them into a single purposive-rational
  schema. This reconstruction directly challenges the basis of Habermas's charge that
  Weber operates with a "one-dimensional" concept of rationality: Weber's typology
  is actually more complex and multi-dimensional than Habermas's critique acknowledges,
  including substantive rationality governed by values and normative commitments.

  RELEVANCE: This paper is a key resource for the countercritique of Habermas's reading
  of Weber. If Weber's own concept of rationality already contains the resources for
  distinguishing formal from substantive rationality, the charge that Weber reduces
  all rationality to purposive means-end calculation is difficult to sustain. This is
  directly relevant to evaluating whether Habermas's critique of Weber's "philosophy
  of consciousness" is fair or a distortion.

  POSITION: Weberian defense: Weber's typology is more multi-dimensional than
  Habermas's critique acknowledges.
  },
  keywords = {Weber-rationality, types-of-rationality, substantive-rationality, formal-rationality, Medium}
}

@article{scaff1987fleeing,
  author = {Scaff, Lawrence A.},
  title = {Fleeing the {I}ron {C}age: Politics and Culture in the Thought of {M}ax {W}eber},
  journal = {American Political Science Review},
  year = {1987},
  volume = {81},
  number = {3},
  pages = {737--755},
  doi = {10.2307/1962674},
  note = {
  CORE ARGUMENT: Scaff argues that standard readings of Weber (including Habermas's)
  overemphasize the iron cage thesis and the pessimistic trajectory of rationalization
  while neglecting Weber's sophisticated engagement with culture, aesthetics, and the
  complex possibilities of political life. Scaff reconstructs a Weber whose analysis
  of the "charismatic counter-movement" and cultural creativity offers resources for
  political theory that are obscured by both Weber's pessimistic interpreters and by
  Habermas's communicative reformulation.

  RELEVANCE: Directly pertinent to the question of what elements of Weber's work
  Habermas neglects or misreads: specifically, Weber's analysis of the tragic dimension
  and the possibilities of charismatic counter-action against rationalization. Scaff
  is one of the key "critical voices" named in the research brief.

  POSITION: Weberian defense that challenges both the pessimistic reading of Weber
  and Habermas's communicative reformulation as incomplete appropriations of Weber's
  political and cultural thought.
  },
  keywords = {Scaff, Weber-culture, iron-cage, charisma, Habermas-misreading, Medium}
}

