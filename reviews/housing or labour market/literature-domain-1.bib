@article{Dustmann2022,
  author = {Dustmann, Christian and Fitzenberger, Bernd and Zimmermann, Markus},
  title = {Housing Expenditure and Income Inequality},
  journal = {The Economic Journal},
  year = {2022},
  volume = {132},
  number = {645},
  pages = {1709--1736},
  doi = {10.1093/ej/ueab097},
  note = {Geography: Germany. Time period: 1993-2013. Data source: German Socio-Economic Panel (SOEP), Einkommens- und Verbrauchsstichprobe (EVS). Control variables: Age, household structure, region, time trends. Main findings: Housing expenditure changes substantially amplify income inequality trends. While the 50/10 income ratio increased by 22 percentage points between 1993-2013, it rose 62 percentage points when accounting for housing costs. The income share of housing expenditure rose disproportionally for the bottom income quintile and fell for the top quintile. Around 70% of individuals in the lowest income quintile are renters, while in the top quintile only about one-third are renters. Younger cohorts spend more on housing and save less than older cohorts did at the same age. Relevance to hypotheses: H2 (high burdens for low-income city dwellers), H4 (changes in income explain housing burden variation).}
}


@techreport{Grosche2009,
  author = {Gr{\"o}sche, Peter},
  title = {Housing, Energy Cost, and the Poor: Counteracting Effects in Germany's Housing Allowance Program},
  institution = {DIW Berlin, The German Socio-Economic Panel (SOEP)},
  year = {2009},
  type = {SOEPpapers on Multidisciplinary Panel Data Research},
  number = {202},
  note = {Geography: Germany. Time period: 2000s. Data source: SOEP. Control variables: Income, household size, dwelling characteristics, energy consumption. Main findings: Germany's housing allowance program (Wohngeld) covers both housing and heating expenses for low-income households. Residents in low-cost units typically occupy flats with poor thermal performance, potentially driving up energy consumption, but this counteracting effect is of negligible magnitude. From an ecological perspective, the allowance scheme creates distorted incentives. Relevance to hypotheses: H2 (low-income household burdens), H6 (policy operationalization).}
}


@article{Kaas2021,
  author = {Kaas, Leo and Kocharkov, Georgi and Preugschat, Edgar and Siassi, Nawid},
  title = {Low Homeownership in Germany---a Quantitative Exploration},
  journal = {Journal of the European Economic Association},
  year = {2021},
  volume = {19},
  number = {1},
  pages = {128--164},
  doi = {10.1093/jeea/jvaa004},
  note = {Geography: Germany vs. United States. Time period: 2014 baseline with policy simulations. Data source: Calibrated life-cycle model using SOEP data. Control variables: Income, age, household structure, policy parameters (transfer taxes, mortgage interest deductibility, social housing availability). Main findings: Three policy factors suppress German homeownership: (1) extensive social housing sector with broad eligibility criteria, (2) high transfer taxes when buying real estate (average 5-6%), (3) no tax deductions for mortgage interest payments. Adjusting all three policies would close the gap in homeownership rates between Germany and the U.S. by about two-thirds. Only 22% of German households in the bottom income quintile are homeowners compared to 45% overall. Relevance to hypotheses: H2 (low-income housing access), H6 (institutional/policy context).}
}


@misc{EmpiricaRegio2024,
  author = {{Empirica Regio}},
  title = {Rent burden in Germany continues to rise},
  year = {2024},
  howpublished = {\url{https://www.empirica-regio.de/en/blog/240124_rent_burden/}},
  note = {Geography: Germany, major cities. Time period: 2010-2024. Data source: Market data from ImmobilienScout24, tenant surveys. Main findings: The rent burden for low-income households in Germany is 31%. Households with medium income spend around 24% of net income on rent when signing new tenancy agreements, and in metropolitan areas almost a third. Net rents in major German cities (A-cities) are 70% more expensive than 13 years ago (2011-2024). High rental price dynamics since 2021 are increasingly burdening low-income households. Relevance to hypotheses: H1 (rising costs but potentially flat burdens for median income), H2 (high burdens for low-income urban dwellers).}
}


@misc{Destatis2024,
  author = {{German Federal Statistical Office (Destatis)}},
  title = {Households overburdened by housing costs 2024},
  year = {2024},
  howpublished = {\url{https://www.destatis.de/Europa/EN/Topic/Population-Labour-Social-Issues/Social-issues-living-conditions/HousingCosts.html}},
  note = {Geography: Germany, EU comparison. Time period: 2024. Data source: EU-SILC. Main findings: In 2024, 12.0% of Germany's population lived in households overburdened by housing costs (spending more than 40% of disposable household income on housing), compared to EU average of 8.2%. Relevance to hypotheses: H2 (housing overburden prevalence in Germany).}
}


@techreport{DIW2021,
  author = {{DIW Berlin and German Centre of Gerontology (DZA)}},
  title = {Increasing numbers of older individuals in Germany burdened by housing costs},
  institution = {DIW Berlin},
  year = {2021},
  note = {Geography: Germany. Time period: 2016. Data source: SOEP and DZA German Ageing Survey. Control variables: Age, income, household type, tenure status. Main findings: In 2016, renter households with reference person aged 65+ spent average of 34% of income on housing. Two-thirds of renter households in this age group had high burden (30%+), and 38% experienced overburden (40%+). Nearly one in six Germans pay 40%+ of income on rent, up dramatically from one in 20 in 1991. Relevance to hypotheses: H2 (high burdens for vulnerable groups including elderly renters).}
}


@misc{OECD2022,
  author = {{OECD}},
  title = {HC1.2. Housing Costs Over Income},
  year = {2022},
  howpublished = {Affordable Housing Database},
  note = {Geography: OECD countries including Germany. Time period: 2022 or latest year. Data source: National household surveys, EU-SILC. Main findings: In 26 countries, there is at least a 10-point difference between median housing cost burden of tenants in bottom and third income quintiles. Median burden of rent payments for tenant households is highest in Nordic countries (Finland 32%, Sweden 29%, Norway 29%) and Netherlands (29%). Relevance to hypotheses: H2 (income gradient in housing burden), comparative context for Germany.}
}


@article{Dewilde2024,
  author = {Dewilde, Caroline and Lancee, Bram},
  title = {Housing affordability and poverty in Europe: on the deteriorating position of market renters},
  journal = {Journal of Social Policy},
  year = {2024},
  volume = {53},
  number = {2},
  pages = {413--435},
  doi = {10.1017/S0047279423000393},
  note = {Geography: 27 European countries including Germany. Time period: 2010-2018. Data source: EU-SILC household-level microdata. Control variables: Income quintile, tenure status, household type, country fixed effects, year fixed effects. Main findings: Position of market renters deteriorated relative to mortgaged homeowners during 2010-2018 in terms of both housing cost burdens and low incomes. In absence of intergenerational transfers, many are compelled into private rental market where rent burdens continue to grow. Germany is one of just five countries where fewer than half of low-income tenants in private market are overburdened when total housing costs are taken into account. Relevance to hypotheses: H2 (high burdens for renters, especially low-income), H5 (housing market dualization).}
}


@techreport{IMF2023,
  author = {{IMF}},
  title = {European Housing Markets at a Turning Point: Risks, Household and Bank Vulnerabilities},
  institution = {International Monetary Fund},
  year = {2023},
  type = {IMF Working Paper},
  number = {WP/23/76},
  note = {Geography: European Union countries including Germany. Time period: 2015-2023. Data source: EU-SILC 2020, HFCS 2017. Control variables: Income quintile, tenure status, household type, country. Main findings: Housing costs as share of income are highest for households in bottom quintile and lowest among highest quintiles. Almost half of poorest households are overburdened by housing costs irrespective of tenure status. Tenants in bottom income quintile who rent at market prices spend more than 40% of disposable income on rents. Between 2010 and Q1 2025, rent prices rose by 27.8% on average across EU. Relevance to hypotheses: H2 (income gradient in housing burden), European context for Germany.}
}


@article{Stone2006,
  author = {Stone, Michael E.},
  title = {What is Housing Affordability? The Case for the Residual Income Approach},
  journal = {Housing Policy Debate},
  year = {2006},
  volume = {17},
  number = {1},
  pages = {151--184},
  doi = {10.1080/10511482.2006.9521564},
  note = {Geography: United States (but widely applied including in Europe). Time period: Conceptual paper with empirical applications. Data source: Various housing surveys. Main findings: Proposes residual income approach to measuring housing affordability rather than ratio approach. Residual income approach measures cost burden by calculating money family has left for housing after other expenditures (food, clothing, medical costs, school fees). In sample of 30.9 million renter households, 19.2 million (62.1%) were cost-burdened by residual-income measure while 14.8 million (47.9%) by traditional 30% measure. Residual-income approach provides better sense of how cost burdens vary across household types and incomes. Relevance to hypotheses: H6 (measurement and operationalization of housing burden is normatively charged).}
}


@misc{EuropeanParliament2024,
  author = {{European Parliament}},
  title = {The housing crisis in Europe: key facts and EU action (infographics)},
  year = {2024},
  howpublished = {\url{https://www.europarl.europa.eu/topics/en/article/20241014STO24542}},
  note = {Geography: European Union including Germany. Time period: 2010-2024. Data source: Eurostat, EU-SILC. Main findings: Between 2010 and Q1 2025, rent prices rose by 27.8% on average across EU. Biggest rises in Estonia (+220%), Lithuania (+184%), Hungary (+124%), Ireland (+115%). Between 2015 and 2024, house prices in EU rose on average by 53%. In 2023, for those with income below 60% of national median, housing share of disposable income was 38.2% on average in EU, while for those above 60% it was 16.2%. Relevance to hypotheses: H2 (income gradient in housing burden), European context.}
}


@article{Haffner2021,
  author = {Haffner, Marietta and Hulse, Kath},
  title = {A fresh look at contemporary perspectives on urban housing affordability},
  journal = {International Journal of Urban Sciences},
  year = {2021},
  volume = {25},
  number = {sup1},
  pages = {59--79},
  doi = {10.1080/12265934.2019.1687320},
  note = {Geography: International comparative perspective including Germany. Time period: 2000s-2010s. Data source: Comparative housing systems analysis. Main findings: Reviews multiple approaches to measuring housing affordability including ratio approaches (percentage of income), residual income approaches, and subjective measures. Different measurement approaches lead to different conclusions about affordability problems. Housing affordability measures are normatively laden choices that reflect different policy priorities. Relevance to hypotheses: H6 (measurement operationalization is normatively charged).}
}


@article{Li2022,
  author = {Li, Jie and Xu, Xiaoqing},
  title = {Housing cost burden and life satisfaction},
  journal = {Journal of Housing and the Built Environment},
  year = {2022},
  volume = {37},
  number = {3},
  pages = {1027--1051},
  doi = {10.1007/s10901-021-09921-1},
  note = {Geography: 14 European countries. Time period: 2018. Data source: EU-SILC 2018. Control variables: Age, gender, education, employment status, household size, tenure status, country fixed effects. Main findings: Households spending more than 30% and more than 50% of income on housing report lower levels of life satisfaction. Negative relationship varies in magnitude across countries, pointing to need to investigate country-specific effects including welfare systems. Both objective housing cost burden measures and subjective perceptions affect wellbeing, but overlap is imperfect. Relevance to hypotheses: H6 (subjective vs. objective burden measurement).}
}


@techreport{Jagemann2022,
  author = {Jagemann, Lars},
  title = {Affordable Housing in Germany -- The case of Housing Allowance (Wohngeld)},
  institution = {ERES (European Real Estate Society)},
  year = {2022},
  type = {Working Paper},
  number = {2022\_157},
  note = {Geography: Germany, focus on dense regions. Time period: 2000s-2020s. Data source: Rent data from ImmobilienScout24, administrative data on housing allowance. Control variables: Region, income, household size, rent levels. Main findings: German housing allowance was effective in significantly reducing rent burden for transfer recipients, particularly in dense regions. Computed rent burden before and after transfers of housing allowance. Housing Benefit Plus Act (Jan 1, 2023) doubled housing benefit for existing households on average (from €190 to €370/month) and doubled the group of recipients, providing relief for low-income households. Relevance to hypotheses: H2 (policy interventions for low-income burden), H6 (policy effectiveness measurement).}
}


@article{Stawarz2021,
  author = {Stawarz, Nico and Sander, Nikola and Sulak, Harun and Rosenbaum-Feldbrügge, Matthias},
  title = {Internal migration and housing costs---A panel analysis for Germany},
  journal = {Population, Space and Place},
  year = {2021},
  volume = {27},
  number = {6},
  pages = {e2412},
  doi = {10.1002/psp.2412},
  note = {Geography: Germany, 401 counties. Time period: 2004-2017. Data source: German Federal Statistical Office migration data, housing cost data from ImmobilienScout24. Control variables: Employment, wages, amenities, demographics. Main findings: Regions with rising housing costs experience declining inflows. In larger cities, rising housing costs also associated with increasing outflows. Average house prices and rents in larger cities increased steadily since 2010, with residential asking rents per m² increasing by 4% per year between 2011-2017 (around 26% cumulative increase). Rising housing costs act as barrier to migration into high-opportunity urban areas. Relevance to hypotheses: H1 (rising urban housing costs), H2 (spatial dimension of housing burden).}
}

